<div id="npsWidget" class="nps-widget">
    <div class="row">
        <div class="col-md-12">
            <div class="block">
                <div class="block-content-outer">
                    <div class="block-content-inner">
                        <!-- Título -->
                        <div class="row">
                            <div class="col-md-12">
                                <h1>
                                    <span aria-hidden="true" class="icon icon-adjust"></span>
                                    <span class="main-text">NPS</span>
                                </h1>
                            </div>
                        </div>

                        <!-- Contenido Tabs -->
                        <div class="tab-content content-sub-tabs">
                            <!-- SNAPSHOT -->
                            <div role="tabpanel" class="tab-pane active" id="nps_snapshot">
                                <div class="cardMachine">
                                    <div class="row snapshot">
                                        <div class="col-md-4 text-center">
                                            <p id="nps_range_current"></p>
                                            <div class="enc_indicador">
                                                <div>
                                                    <h1 id="nps_value" class="main-score-encuesta">0</h1>
                                                    <p>NPS (Recomendación)</p>
                                                </div>
                                                <div class="enc_respuestas">
                                                    <p id="nps_total_respuestas"></p>
                                                    <p style="font-size:12px;">Respuestas</p>
                                                    <p id="nps_encuestados"></p>
                                                    <p style="font-size:12px;">Encuestados</p>
                                                </div>
                                            </div>



                                            <div style="width:100%;height:1px;background-color:#808080;margin:10px 0"></div>

                                            <div id="nps_container" style="float:left">
                                                <p style="margin:0;">
                                                    Periodo anterior:
                                                    <span id="nps_value_ant"></span>
                                                    <span id="nps_icon"></span>
                                                    <span id="nps_diff"></span>
                                                </p>
                                                <p id="nps_range_prev" style="margin:0; font-size:12px; color:gray;"></p>
                                            </div>

                                            @*<p id="nps_prev_delta" class="text-muted" style="margin:0;"></p>
                    <p id="nps_range_prev" class="text-muted" style="margin:0;"></p>*@

                                        </div>

                                        <div class="col-md-8 bars-container">
                                            <!-- Barras -->
                                            <div class="snapshot-bars">
                                                <div class="bar-row">
                                                    <div class="bar-label">
                                                        <span class="count" id="cnt_detractores">0</span>
                                                        <span>Detractores</span>
                                                    </div>
                                                    <div class="bar-container">
                                                        <div class="bar bar-ultra-danger" id="bar_detractores" style="width:0%">0%</div>
                                                    </div>
                                                    <div class="bar-trend" id="trend_detractores">= 0.00%</div>
                                                </div>

                                                <div class="bar-row">
                                                    <div class="bar-label">
                                                        <span class="count" id="cnt_pasivos">0</span>
                                                        <span>Pasivos</span>
                                                    </div>
                                                    <div class="bar-container">
                                                        <div class="bar bar-warning" id="bar_pasivos" style="width:0%">0%</div>
                                                    </div>
                                                    <div class="bar-trend" id="trend_pasivos">= 0.00%</div>
                                                </div>

                                                <div class="bar-row">
                                                    <div class="bar-label">
                                                        <span class="count" id="cnt_promotores">0</span>
                                                        <span>Promotores</span>
                                                    </div>
                                                    <div class="bar-container">
                                                        <div class="bar bar-ultra-success" id="bar_promotores" style="width:0%">0%</div>
                                                    </div>
                                                    <div class="bar-trend" id="trend_promotores">= 0.00%</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="cardMachine">
                                    <h4 style="margin-top:10px;">Tendencia mensual de NPS</h4>
                                    <select id="filtroTendenciaNps" class="form-control" style="width:200px;">
                                        <option value="diario" selected>Diario</option>
                                        <option value="mensual">Mensual</option>
                                    </select>
                                    <canvas id="nps_chartTendencia" height="120"></canvas>
                                </div>
                            </div>

                           
                        </div><!-- /tab-content -->

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
