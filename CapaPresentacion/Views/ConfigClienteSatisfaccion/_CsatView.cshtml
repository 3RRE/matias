<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <!-- Título -->
                    <div class="row">
                        <div class="col-md-12">
                            <h1>
                                <span aria-hidden="true" class="icon icon-adjust"></span>
                                <span class="main-text">CSAT</span>
                            </h1>
                        </div>
                    </div>

                    <!-- Contenido Tabs -->
                    <div class="tab-content content-sub-tabs">
                        <!-- SNAPSHOT -->
                        <div role="tabpanel" class="tab-pane active sub-tabs-card" id="csat_snapshot">
                            <div class="row snapshot">
                                <div class="col-lg-4 text-center">
                                    <p id="csat_range_current"></p>
                                    <div class="enc_indicador">
                                        <div>
                                            <h1 id="csat_value" class="main-score-encuesta">0</h1>
                                            <p>CSAT (Satisfacción)</p>
                                        </div>
                                        <div class="enc_respuestas">
                                            <p id="csat_respuestas"></p>
                                            <p style="font-size:12px;">Respuestas</p>
                                            <p id="csat_encuestados"></p>
                                            <p style="font-size:12px;">Encuestados</p>

                                        </div>
                                    </div>

                                    <div style="width:100%;height:1px;background-color:#808080;margin:10px 0"></div>

                                    <div id="nps_container" style="float:left">
                                        <p style="margin:0;">
                                            Periodo anterior:
                                            <span id="csat_value_ant"></span>
                                            <span id="csat_icon"></span>
                                            <span id="csat_diff"></span>
                                        </p>
                                        <p id="csat_range_prev" style="margin:0; font-size:12px; color:gray;"></p>
                                    </div>
                                </div>

                                <!-- Barras -->
                                <div class="col-lg-8 bars-container">
                                    <div class="snapshot-bars">
                                        <!-- Muy Insatisfecho -->
                                        <div class="bar-row">
                                            <div class="bar-label">
                                                <span id="cnt_muyInsatisfecho" class="count">0</span>
                                                <span>Muy Insatisfecho</span>
                                            </div>
                                            <div class="bar-container">
                                                <div id="bar_muyInsatisfecho" class="bar bar-ultra-danger" style="width: 0%">0%</div>
                                            </div>
                                            <div id="trend_muyInsatisfecho" class="bar-trend text-muted">0%</div>
                                        </div>

                                        <!-- Insatisfecho -->
                                        <div class="bar-row">
                                            <div class="bar-label">
                                                <span id="cnt_insatisfecho" class="count">0</span>
                                                <span>Insatisfecho</span>
                                            </div>
                                            <div class="bar-container">
                                                <div id="bar_insatisfecho" class="bar bar-danger" style="width: 0%">0%</div>
                                            </div>
                                            <div id="trend_insatisfecho" class="bar-trend text-muted">0%</div>
                                        </div>

                                        <!-- Neutral -->
                                        <div class="bar-row">
                                            <div class="bar-label">
                                                <span id="cnt_neutral" class="count">0</span>
                                                <span>Neutral</span>
                                            </div>
                                            <div class="bar-container">
                                                <div id="bar_neutral" class="bar bar-warning" style="width: 0%">0%</div>
                                            </div>
                                            <div id="trend_neutral" class="bar-trend text-muted">0%</div>
                                        </div>

                                        <!-- Satisfecho -->
                                        <div class="bar-row">
                                            <div class="bar-label">
                                                <span id="cnt_satisfecho" class="count">0</span>
                                                <span>Satisfecho</span>
                                            </div>
                                            <div class="bar-container">
                                                <div id="bar_satisfecho" class="bar bar-success" style="width: 0%">0%</div>
                                            </div>
                                            <div id="trend_satisfecho" class="bar-trend text-muted">0%</div>
                                        </div>

                                        <!-- Muy Satisfecho -->
                                        <div class="bar-row">
                                            <div class="bar-label">
                                                <span id="cnt_muySatisfecho" class="count">0</span>
                                                <span>Muy Satisfecho</span>
                                            </div>
                                            <div class="bar-container">
                                                <div id="bar_muySatisfecho" class="bar bar-ultra-success" style="width: 0%">0%</div>
                                            </div>
                                            <div id="trend_muySatisfecho" class="bar-trend text-muted">0%</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <h4>Tendencia diaria de CSAT</h4>
                            <select id="filtroTendencia" class="form-control" style="width:200px;">
                                <option value="diario" selected>Diario</option>
                                <option value="mensual">Mensual</option>
                            </select>
                            <canvas id="csat_chartTendencia" height="120"></canvas>
                        </div>

                        
                        <!-- TABLAS -->
                        
                    </div><!-- /tab-content -->
                </div>
            </div>
        </div>
    </div>
</div>
