
@using S3k.Utilitario
@using CapaEntidad.Notificaciones.DTO.Mantenedores
@model CredencialWhatsAppDto
    
@{
    Layout = null;
    string fecha_archivos = ClaseEncriptacion.EncriptarCadenaHASH(Convert.ToString(DateTime.Now));
}

<style>
    .switch {
        position: relative;
        display: inline-block;
        width: 60px;
        height: 34px;
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: 0.4s;
        border-radius: 34px !important;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: 0.4s;
            border-radius: 50%;
        }

    input:checked + .slider {
        background-color: #2196F3;
    }

        input:checked + .slider:before {
            transform: translateX(26px);
        }

    #Texto {
        resize: vertical;
    }
</style>


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12" id="div">
        <form class="medium bv-form" role="form" method="post" action="#" id="form_registro">
            <input type="hidden" id="Id" name="Id" value="@Model.Id" />

            <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                        <div class="input-group">
                            <input type="hidden" id="IdSistema" name="IdSistema" value="@Model.IdSistema" />
                            <span class="input-group-addon">Sistema</span>
                            <select class="form-control input-sm" id="cboSistemaSelect" name="IdSistema"></select>
                        </div>
                    </div>
                </div>

            <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">URL Base</span>
                            <input type="text" class="form-control input-sm" id="UrlBase" name="UrlBase" placeholder="Ingrese la URL base" value="@Model.UrlBase" />
                        </div>
                    </div>
                </div>

                <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">Instancia</span>
                            <input type="text" class="form-control input-sm" id="Instancia" name="Instancia" placeholder="Ingrese la instancia" value="@Model.Instancia" />
                        </div>
                    </div>
                </div>

                <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">Token</span>
                            <input type="text" class="form-control input-sm" id="Token" name="Token" placeholder="Ingrese el token" value="@Model.Token"  />
                        </div>
                    </div>
                </div>
        </form>
    </div>
</div>

<script src="~/Content/assets/viewsjs/Notificaciones/CredencialWhatsApp/credencialWhatsAppGuardar.js?v=@fecha_archivos"></script>