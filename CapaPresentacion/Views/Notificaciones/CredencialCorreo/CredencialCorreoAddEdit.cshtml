
@using S3k.Utilitario
@using CapaEntidad.Notificaciones.DTO.Mantenedores
@model CredencialCorreoDto

@{
    Layout = null;
    string fecha_archivos = ClaseEncriptacion.EncriptarCadenaHASH(Convert.ToString(DateTime.Now));
}

<style>
    .switch {
        position: relative;
        display: inline-block;
        width: 60px;
        height: 34px;
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: 0.4s;
        border-radius: 34px !important;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: 0.4s;
            border-radius: 50%;
        }

    input:checked + .slider {
        background-color: #2196F3;
    }

        input:checked + .slider:before {
            transform: translateX(26px);
        }

    #Texto {
        resize: vertical;
    }
</style>


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12" id="div">
        <form class="medium bv-form" role="form" method="post" action="#" id="form_registro">
            <input type="hidden" id="Id" name="Id" value="@Model.Id" />

            <div class="col-md-12 col-sm-12">
                <div class="form-group">
                    <div class="input-group">
                        <input type="hidden" id="IdSistema" name="IdSistema" value="@Model.IdSistema" />
                        <span class="input-group-addon">Sistema</span>
                        <select class="form-control input-sm" id="cboSistemaSelect" name="IdSistema"></select>
                    </div>
                </div>
            </div>

            <div class="col-md-12 col-sm-12">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">Nombre Remitente</span>
                        <input type="text" class="form-control input-sm" id="NombreRemitente" name="NombreRemitente" placeholder="Ingrese el nombre del remitente" value="@Model.NombreRemitente" required />
                    </div>
                </div>
            </div>

            <div class="col-md-12 col-sm-12">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">Correo</span>
                        <input type="email" class="form-control input-sm" id="Correo" name="Correo" placeholder="Ingrese el correo" value="@Model.Correo" required />
                    </div>
                </div>
            </div>

            <div class="col-md-12 col-sm-12">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">Clave SMTP</span>
                        <input type="password" class="form-control input-sm" id="ClaveSMTP" name="ClaveSMTP" placeholder="Ingrese la clave SMTP" value="@Model.ClaveSMTP" required />
                    </div>
                </div>
            </div>

            <div class="col-md-12 col-sm-12">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">Servidor SMTP</span>
                        <input type="text" class="form-control input-sm" id="ServidorSMTP" name="ServidorSMTP" placeholder="Ingrese el servidor SMTP" value="@Model.ServidorSMTP" required />
                    </div>
                </div>
            </div>

            <div class="col-md-12 col-sm-12">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">Puerto SMTP</span>
                        <input type="number" class="form-control input-sm" id="PuertoSMTP" name="PuertoSMTP" placeholder="Ingrese el puerto SMTP" value="@Model.PuertoSMTP" required />
                    </div>
                </div>
            </div>

            <div class="col-md-12 col-sm-12">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">SSL Habilitado</span>
                        <div class="input-group-addon">
                            <label class="switch">
                                <input type="checkbox" name="SSLHabilitado" id="toggleSSLHabilitado" @(Model.SSLHabilitado ? "checked" : "") />
                                <span class="slider round"></span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12 col-sm-12">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">Cuota Diaria</span>
                        <input type="number" class="form-control input-sm" id="CuotaDiaria" name="CuotaDiaria" placeholder="Ingrese la cuota diaria" value="@Model.CuotaDiaria" required />
                    </div>
                </div>
            </div>

            <div class="col-md-12 col-sm-12">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">Prioridad</span>
                        <input type="number" class="form-control input-sm" id="Prioridad" name="Prioridad" placeholder="Ingrese la prioridad" value="@Model.Prioridad" required />
                    </div>
                </div>
            </div>

            <div class="col-md-12 col-sm-12">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">Estado</span>
                        <div class="input-group-addon">
                            <label class="switch">
                                <input type="checkbox" name="Estado" id="toggleEstado" @(Model.Estado ? "checked" : "") />
                                <span class="slider round"></span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/Content/assets/viewsjs/Notificaciones/CredencialCorreo/credencialCorreoGuardar.js?v=@fecha_archivos"></script>