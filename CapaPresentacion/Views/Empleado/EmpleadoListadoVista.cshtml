@{
    ViewBag.Title = "Listado de Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div class="row">
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">

                    <div class="row">
                        <div class="col-md-12">
                            <h1>
                                <span aria-hidden="true" class="icon icon-shield"></span>
                                <span class="main-text">
                                    Listado de Empleados
                                </span>
                            </h1>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">

                    <div class="row">

                        <div class="col-md-offset-4 col-md-4 col-sm-4 col-xs-6">
                            <button type="button" id="btnNuevoEmpleado" class="btn btn-sm btn-success col-md-12 col-xs-12">
                                <span class="glyphicon glyphicon-book"></span>
                                Nuevo
                            </button>
                        </div>
                        <div class="btn-group col-md-4 col-sm-4 col-xs-6">
                            <button class="btn btn-primary btn-sm col-md-12 col-xs-12" type="button" id="excel"><i class="glyphicon glyphicon-file"></i> Excel</button>
                            @*<ul role="menu" class="dropdown-menu" style="margin-left: 14px;">
                                    <li><a href="#" id="excel"><span class="glyphicon glyphicon-list-alt"></span> Excel</a></li>
                                    <li><a href="#" id="pdf"><span class="glyphicon glyphicon-file"></span> PDF</a></li>
                                    <li><a href="#" id="imprimir"><span class="glyphicon glyphicon-print"></span> Imprimir</a></li>
                                </ul>*@
                        </div>


                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12">
                            <table id="tableEmpleado" class="table table-striped table-bordered table-hover table-condensed highlight-color-red">
                                <thead>
                                    <tr>
                                        <th>Apellido y Nombres</th>
                                        <th>Cargo</th>
                                        <th>Correo</th>
                                        <th>Usuario</th>
                                        <th>Rol</th>
                                        <th>Estado</th>
                                        <th>Accion</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

@section modal{
    <div class="modal fade" tabindex="-1" id="modalFormularioDispositivo" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-md">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"><span id=""></span> Dispositivo</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>

                </div>
                <div class="modal-body" id="">
                    <div class="row">
                        <form class="" id="form_dispositivo">
                            <input type="hidden" name="emd_id" id="emd_id" value="" />
                            <input type="hidden" name="emp_id" id="emp_idd" value="" />
                            <div class="col-md-12 col-xs-12">
                                <div class="form-group">
                                    <label>IMEI</label>
                                    <input type="text" name="emd_imei" id="emd_imei" class="form-control" placeholder="IMEI" />
                                </div>
                            </div>

                            <div class="col-md-12 col-xs-12">
                                <div class="form-group">
                                    <label>Estado</label>
                                    <select class="form-control" name="emd_estado" id="emd_estado">
                                        <option value="1" selected>Activo</option>
                                        <option value="0">Inactivo</option>
                                    </select>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-flash-border-danger btn-guardarDispositivo"><i class="fa fa-save"></i> Guardar</button>
                    <button type="button" class="btn btn-flash-border-dark" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> Cerrar</button>
                </div>
            </div>
        </div>
    </div>

}



@section js
{
    <script src="~/Content/assets/viewsjs/Empleado/EmpleadoListadoVista.js"></script>
}