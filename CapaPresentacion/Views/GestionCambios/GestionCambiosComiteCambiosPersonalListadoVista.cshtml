
@{
    ViewBag.Title = "GestionCambiosComiteCambiosPersonalListadoVista";
}

@using (Html.BeginForm("ComiteCambiosGuardarJson", "GestionCambios", FormMethod.Post, new { role = "form", id = "frmNuevoComite", @class = "form-horizontal" }))
{

    <div class="row">
        <div class="col-md-6">
            <div class="block">
                <div class="block-content-outer">
                    <div class="block-content-inner">

                        <div class="row">
                            <div class="col-md-12">
                                <h1>
                                    <span aria-hidden="true" class="icon icon-shield"></span>
                                    <span class="main-text">
                                        Comite de Cambios
                                    </span>
                                </h1>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="block">
                <div class="block-content-outer">
                    <div class="block-content-inner">

                        <div class="row">

                            <div class="col-md-4 col-sm-4  col-xs-12 pull-right">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12">
                                        <button id="GuardarComite" type="submit" class="btn btn-success btn-sm col-md-12 col-xs-12">
                                            <span class="glyphicon glyphicon-floppy-disk"></span>
                                            Guardar Comite
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="row visible-xs">
                                <div class="col-xs-12">
                                    <div style="margin-bottom:10px"></div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4  col-xs-12 pull-right">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12">
                                        <button type="button" id="btnCancelar" class="btn btn-primary btn-sm col-md-12 col-xs-12">
                                            <span class="glyphicon glyphicon-refresh"></span>
                                            Cancelar
                                        </button>
                                    </div>
                                </div>
                            </div>



                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    //@Html.HiddenFor(x => x.proyectoestudiantecurso_id)
    <div class="row">
        <div class="col-md-12">
            <div class="block">
                <div class="block-content-outer">
                    <div class="block-content-inner">
                        <div class="row">
                            <div id="dual-list-box-employees" class="form-group row" style="padding: 1em">


                                <select data-title="Personal" data-horizontal="false" name="cmbpersonal[]" id="cbmpersonal" class="unselected form-control" style="height: 200px; width: 100%;" multiple="multiple" data-json="false"></select>



                            </div>



                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>

}

@section js
{

    <script src="~/Content/assets/viewsjs/GestionCambios/GestionCambiosComiteCambiosPersonal.js"></script>
    
    <script type="text/javascript" src="~/Content/assets/js/dual-list-box.min.js"></script>
}


