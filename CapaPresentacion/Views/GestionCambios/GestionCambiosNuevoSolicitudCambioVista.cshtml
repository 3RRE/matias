
@{
    ViewBag.Title = "GestionCambiosNuevoSolicitudCambioVista";
}

<form class="medium" role="form" id="frmNuevoSolicitudCambio" method="post" action="#">
    <div class="row">
        <div class="col-md-6">
            <div class="block">
                <div class="block-content-outer">
                    <div class="block-content-inner">
                        <div class="row">
                            <div class="col-md-12 col-xs-12 col-sm-12">
                                <h1>
                                    <span aria-hidden="true" class="icon icon-block-menu"></span>
                                    <span class="main-text">
                                        Nueva Solicitud de Cambio
                                    </span>
                                </h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="block">
                <div class="block-content-outer">
                    <div class="block-content-inner">

                        <div class="row">
                            <div class="col-md-4 col-sm-4  col-xs-12 pull-right">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12">
                                        <button type="button" id="btnEnviar" class="btn btn-success btn-sm col-md-12 col-xs-12">
                                            <span class="glyphicon glyphicon-book"></span>
                                            Enviar
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4  col-xs-12 pull-right">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12">
                                        <button type="button" id="btnBorrador" class="btn btn-primary btn-sm col-md-12 col-xs-12">
                                            <span class="glyphicon glyphicon-file"></span>
                                            Guardar Borrador
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4  col-xs-12 pull-right">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12">
                                        <button type="button" id="btnListar" class="btn btn-primary btn-sm col-md-12 col-xs-12">
                                            <span class="glyphicon glyphicon-file"></span>
                                            Listado
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="block">
                <div class="block-content-outer">
                    <div class="block-content-inner">
                        <div class="row">

                            <div class="col-xs-12 col-md-12 col-sm-12">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="col-md-12 col-sm-12">
                                            <div class="form-group cbo">
                                                <label>Sala</label>
                                                <select class="form-control input-sm codSalaAuditoria" id="cboSala" name="SalaId">
                                                    <option value="">--Seleccione--</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-12 col-sm-12">
                                            <div class="form-group cbo">
                                                <label for="txtusuario">Sistema</label>
                                                <select class="form-control input-sm" id="cboSistema" name="cboSistema">
                                                    <option value="">--Seleccione--</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-12 col-sm-12">
                                            <div class="form-group cbo">
                                                <label for="txtusuario">Modulo</label>
                                                <select class="form-control input-sm" id="cboModulo" name="ModuloId">
                                                    <option value="">--Seleccione--</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-12 col-sm-12">
                                            <div class="form-group cbo">
                                                <label for="txtusuario">Tipo Cambio</label>
                                                <select class="form-control input-sm" id="cboTipoCambio" name="TipoCambioId">
                                                    <option value="">--Seleccione--</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-md-12 col-sm-12">
                                            <div class="form-group cbo">
                                                <label for="txtusuario">Descripción de Cambio</label>
                                                <textarea class="form-control" rows="7" name="Descripcion" id="txtDescripcion"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</form>

@section modal
