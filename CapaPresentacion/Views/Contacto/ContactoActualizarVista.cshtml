@using CapaEntidad.WhatsApp
@model WSP_ContactoEntidad
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <div class="col-md-12">
            <form id="formContacto" role="form">
                <input type="hidden" id="IdContacto" name="IdContacto" value="@Model.IdContacto" />
                <div class="col-md-12 col-sm-12">
                    <div class="input-group form-group">
                        <span class="input-group-addon">
                            Nombre:
                        </span>
                        <input type="text" autocomplete="off" class="form-control input-sm" id="Nombre" name="Nombre" placeholder="Nombre del Contacto" value="@Model.Nombre">
                    </div>
                </div>

                <div class="col-md-5 col-sm-12">
                    <div class="input-group form-group">
                        <span class="input-group-addon">
                            Código País: +
                        </span>
                        <input type="text" autocomplete="off" onkeypress="return valideKeyNumber(event)" class="form-control input-sm soloNumeros" id="CodigoPais" name="CodigoPais" placeholder="Solo numeros (51)" value="@Model.CodigoPais">
                    </div>
                </div>

                <div class="col-md-7 col-sm-12">
                    <div class="input-group form-group">
                        <span class="input-group-addon">
                            Número:
                        </span>
                        <input type="text" autocomplete="off" onkeypress="return valideKeyNumber(event)" class="form-control input-sm soloNumeros" id="Numero" name="Numero" placeholder="Número del Contacto" value="@Model.Numero">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/Content/assets/viewsjs/WhatsApp/Contacto/ActualizarContacto.js"></script>
