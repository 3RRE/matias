@using S3k.Utilitario
@{
    ViewBag.Title = "Configuración de Progresivo Ruleta";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string fecha_archivos = ClaseEncriptacion.EncriptarCadenaHASH(Convert.ToString(DateTime.Now));
}

@section css {
    <link href="~/Content/assets/js/optional/inputTags/css/inputTags.min.css" rel="stylesheet" />
    <style>
        p.inputTags-error:first-of-type {
            margin-top: 0;
        }

        #input-tag-posiciones {
            border: none !important;
            outline: none !important;
        }
    </style>
}

<div class="row">
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12">
                            <h1>
                                <span aria-hidden="true" class="icon las la-cog"></span>
                                <span class="main-text">
                                    @ViewBag.Title
                                </span>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-xs-12 ">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <button type="button" data-nombre="Nueva Configuración Progresivo Ruleta" id="btnNuevo" class="btn btn-sm btn-success col-md-12 col-xs-12">
                                        <span class="glyphicon glyphicon-plus-sign"></span>
                                        Nuevo
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <button type="button" id="btnBuscar" class="btn btn-sm btn-primary col-md-12 col-xs-12">
                                        <span class="glyphicon glyphicon-search"></span>
                                        Buscar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-sm-6 col-md-6 col-lg-4">
                            <div class="input-group ">
                                <span class="input-group-addon">
                                    Sala
                                </span>
                                <select class="form-control input-sm codSala" id="cboSala">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12 tam">
                            <div class="table-responsive">
                                <table id="table" class="table table-striped table-bordered table-hover table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Sala</th>
                                            <th>Id Ruleta</th>
                                            <th>Nombre</th>
                                            <th>Cantidad de Máquinas</th>
                                            @*<th>Máquinas</th>*@
                                            <th>Mínimo Maquina</th>
                                            <th>Porcentaje</th>
                                            <th>Apuesta Mínima</th>
                                            <th>IP</th>
                                            <th>Status</th>
                                            <th>Hora Inicio</th>
                                            <th>Hora Fin</th>
                                            <th>Acción</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section modal
{
    <div class="modal fade modal-xl" id="modalGroup" tabindex="-1" role="dialog" aria-labelledby="default-modal-label" aria-hidden="true">
        <div class="modal-dialog">
            <input type="hidden" name="hddModal" id="hddmodal" />
            <div class="modal-content" data-border-top="multi">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="default-modal-label">Mantenimiento</h4>
                </div>
                <div class="modal-body" id="bodyModal">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary" id="btnGuardar">Guardar</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
}

@section js {
    <script src="~/Content/assets/js/optional/inputTags/js/inputTags.jquery.min.js"></script>
    <script src="~/Content/assets/viewsjs/ProgresivoRuleta/Configuracion/filtros.js?v=@fecha_archivos"></script>
    <script src="~/Content/assets/viewsjs/ProgresivoRuleta/Configuracion/configuracion.js?v=@fecha_archivos"></script>
}