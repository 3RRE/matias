@using S3k.Utilitario;

@{
    ViewBag.Title = "Ganadores Progresivo Ruleta";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string fechaArchivos = ClaseEncriptacion.EncriptarCadenaHASH(Convert.ToString(DateTime.Now));
}

<div class="row">
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12 col-xs-12 col-sm-12">
                            <h1>
                                <span aria-hidden="true" class="icon icon-block-menu"></span>
                                <span class="main-text">
                                    @ViewBag.Title
                                </span>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <!-- row -->
                    <div class="row">
                        <!-- col -->
                        <div class="col-md-4 col-sm-4  col-xs-6 pull-right">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <button type="button" id="btnExcel" class="btn btn-primary btn-sm col-md-12 col-xs-12">
                                        <span class="glyphicon glyphicon-file"></span>
                                        Excel
                                    </button>
                                </div>
                            </div>
                        </div>
                        <!-- col -->
                        <div class="col-md-4 col-sm-4  col-xs-6 pull-right">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <button type="button" id="btnBuscar" class="btn btn-success btn-sm col-md-12 col-xs-12">
                                        <span class="glyphicon glyphicon-search"></span>
                                        Buscar
                                    </button>
                                </div>
                            </div>
                        </div>
                        <!-- col -->
                    </div>
                    <!-- row -->
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <!-- row -->
                    <div class="row">
                        <!-- col -->
                        <div class="col-sm-6 col-md-6 col-lg-3">
                            <div class="input-group ">
                                <span class="input-group-addon">
                                    Salas
                                </span>
                                <select class="form-control input-sm" id="selectSalas">
                                    <option value="">--Seleccione--</option>
                                </select>
                            </div>
                        </div>
                        <!-- col -->
                        <!-- col -->
                        <div class="col-sm-6 col-md-6 col-lg-3">
                            <div class="input-group ">
                                <span class="input-group-addon">
                                    Ruletas
                                </span>
                                <select class="form-control input-sm" id="selectRuletas">
                                    <option value="">--Seleccione--</option>
                                </select>
                            </div>
                        </div>
                        <!-- col -->
                        <!-- col -->
                        <div class="col-sm-6 col-md-6 col-lg-3">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    Fecha Inicial
                                </span>
                                <input type="text" class="form-control input-sm date-only" id="fechaInicial" readonly />
                                <span class="input-group-addon input-group-icon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <!-- col -->
                        <!-- col -->
                        <div class="col-sm-6 col-md-6 col-lg-3">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    Fecha Final
                                </span>
                                <input type="text" class="form-control input-sm date-only" id="fechaFinal" readonly />
                                <span class="input-group-addon input-group-icon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <!-- col -->
                    </div>
                    <!-- row -->
                </div>
            </div>
        </div>
    </div>
</div>

<div id="blockTableRecords" class="row hidden">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <!-- row -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table id="tableRecords" class="table table-striped table-condensed table-bordered table-hover"></table>
                            </div>
                        </div>
                    </div>
                    <!-- row -->
                </div>
            </div>
        </div>
    </div>
</div>

@section js
{
    <script src="~/Content/assets/viewsjs/ProgresivoRuleta/GanadoresPRU.js?v=@fechaArchivos"></script>
}