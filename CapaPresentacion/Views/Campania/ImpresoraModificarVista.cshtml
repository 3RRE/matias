@{
    ViewBag.Title = "Modificar Sala";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Activities.Expressions
@using System.Web.Script.Serialization
@using System.Web.UI.WebControls

@{
    String impresora = new JavaScriptSerializer().Serialize(ViewBag.impresora);
    String mensaje = new JavaScriptSerializer().Serialize(ViewBag.mensaje);
}
<script type="text/javascript">
    impresora = (@Html.Raw(impresora));
    mensaje = (@Html.Raw(mensaje));
</script>

<div class="row">
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-xs-12 col-md-12">
                            <h1>
                                <span aria-hidden="true" class="icon icon-atom"></span>
                                <span class="main-text">
                                    Registro de Impresora
                                </span>
                            </h1>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">

                        <div class="col-md-4 col-md-offset-4 col-sm-6 col-xs-6">
                            <button type="button" class="btn btn-success btn-sm col-md-12 col-sm-12 col-xs-12 btnListar"><span class="glyphicon glyphicon-list-alt"></span> Listado </button>
                        </div>

                        <div class="col-md-4 col-sm-6 col-xs-6">
                            <button type="button" class="btn btn-primary btn-sm col-md-12 col-sm-12 col-xs-12 btnGuardar "><span class="glyphicon glyphicon-floppy-disk"></span> Guardar </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner ">
                    <div class="row">
                        <form id="frmRegistroImpresora">
                            <input type="hidden" class="form-control input-sm " id="id" name="id" placeholder="id" value="0">
                            <div class="col-md-6 col-sm-4 col-xs-12">
                                <div class="input-group form-group">
                                    <span class="input-group-addon">
                                        Nombre
                                    </span>
                                    <input type="text" class="form-control input-sm " id="nombre" name="nombre" placeholder="Nombre">
                                </div>
                            </div>

                            <div class="col-md-3 col-sm-4 col-xs-12">
                                <div class="input-group form-group">
                                    <span class="input-group-addon">
                                        IP
                                    </span>
                                    <input type="text" class="form-control input-sm UpperCase" id="ip" name="ip" placeholder="IP">
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-4 col-xs-12">
                                <div class="input-group form-group">
                                    <span class="input-group-addon">
                                        Puerto
                                    </span>
                                    <input type="text" class="form-control input-sm UpperCase" id="puerto" name="puerto" placeholder="Puerto">
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-4 col-xs-12">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            Sala
                                        </span>
                                        <select id="cbo_sala_id" class="form-control input-sm select" name="sala_id"></select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3 col-sm-4 col-xs-12">
                                <div class="input-group form-group">
                                    <span class="input-group-addon">
                                        Estado
                                    </span>
                                    <select id="cboEstado" class="form-control input-sm mySelect" name="estado">
                                        <option value="0">Inactivo</option>
                                        <option value="1" selected>Activo</option>
                                    </select>

                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

@section js
{
    <script src="~/Content/assets/viewsjs/Campania/ImpresoraModificar.js"></script>
}

