@using S3k.Utilitario
@using CapaEntidad.BOT.Entities
@model BOT_AreaEntidad
@{
    Layout = null;
    string fecha_archivos = ClaseEncriptacion.EncriptarCadenaHASH(Convert.ToString(DateTime.Now));
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12" id="div">
        <form id="form_registro" role="form">
            <input type="hidden" id="Id" name="Id" value="@Model.Id" />
            <div class="col-md-12 col-sm-12">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">
                            Nombre
                        </span>
                        <input type="text" class="form-control input-sm" id="Nombre" value="@Model.Nombre" name="Nombre" placeholder="Nombre del Área">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/Content/assets/viewsjs/Bot/Area/areaGuardar.js?v=@fecha_archivos"></script>