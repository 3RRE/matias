@{
    ViewBag.Title = "Editar Correo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Activities.Expressions
@using System.Web.Script.Serialization
@using System.Web.UI.WebControls

@{
    String correo = new JavaScriptSerializer().Serialize(ViewBag.correo);
    String mensaje = new JavaScriptSerializer().Serialize(ViewBag.mensaje);
}
<script type="text/javascript">
    correo = (@Html.Raw(correo));
    mensaje = (@Html.Raw(mensaje));
</script>
<div class="row">
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-xs-12 col-md-12">
                            <h1>
                                <span aria-hidden="true" class="icon icon-shield"></span>
                                <span class="main-text">
                                    Edición Correos
                                </span>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">

                        <div class="col-md-4 col-md-offset-4 col-sm-6 col-xs-6">
                            <button type="button" class="btn btn-success btn-sm col-md-12 col-sm-12 col-xs-12 btnListar"><span class="glyphicon glyphicon-list-alt"></span> Listado </button>
                        </div>

                        <div class="col-md-4 col-sm-6 col-xs-6">
                            <button type="button" class="btn btn-primary btn-sm col-md-12 col-sm-12 col-xs-12 btnGuardar "><span class="glyphicon glyphicon-floppy-disk"></span> Guardar </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="contenedor_registro">
                                <form id="form_registro_correo">
                                    <input type="hidden" id="Id" value="0" name="Id" />
                                    <input type="hidden" name="PasswordEncriptado" value="" id="PasswordEncriptado"/>
                                    <fieldset>
                                        <legend>Informacion Correo:</legend>
                                        <div class="col-md-6 col-sm-12">
                                            <div class="input-group form-group">
                                                <span class="input-group-addon">
                                                    Nombre
                                                </span>
                                                <input type="text" class="form-control input-sm UpperCase" id="Nombre" name="Nombre" placeholder="Nombre">
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-12">
                                            <div class="input-group form-group">
                                                <span class="input-group-addon">
                                                    Email
                                                </span>
                                                <input type="email" class="form-control input-sm UpperCase" id="Email" name="Email" placeholder="Email">
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-12">
                                            <div class="input-group form-group">
                                                <span class="input-group-addon">
                                                    Sala
                                                </span>
                                                @*<select id="cboSala" class="form-control input-sm" name="CodSala"></select>*@
                                                <select id="cboSala" class="form-control input-sm" name="arraySalas" multiple="multiple"></select>

                                                <span class="input-group-addon">
                                                    <input type="checkbox" name="checkTodoSalas" id="checkTodoSalas" />
                                                    Todo
                                                </span>

                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-12">
                                            <div class="input-group form-group">
                                                <span class="input-group-addon">
                                                    Tipo Correo
                                                </span>
                                                <select id="cboTipoCorreo" class="form-control input-sm mySelect" name="CodTipoCorreo">
                                                    <option value="2">DESTINATARIO</option>
                                                    <option value="1">REMITENTE</option>
                                                </select>
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset id="divInformacionServidor" style="display:none">
                                        <legend>Informacion Servidor:</legend>
                                        <div class="col-md-6 col-sm-12">
                                            <div class="input-group form-group">
                                                <span class="input-group-addon">
                                                    Password
                                                </span>
                                                <input type="password" class="form-control input-sm" id="Password" name="Password" placeholder="Password" disabled>
                                                <span class="input-group-addon" id="spanPassword" style="display:none">
                                                    <input type="checkbox" name="checkPassword" id="checkPassword" />
                                                    Editar
                                                </span>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-12">
                                            <div class="input-group form-group">
                                                <span class="input-group-addon">
                                                    Puerto
                                                </span>
                                                <input type="text" class="form-control input-sm Number" id="Puerto" name="Puerto" placeholder="Puerto">
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-12">
                                            <div class="input-group form-group">
                                                <span class="input-group-addon">
                                                    SSL
                                                </span>
                                                <select id="cboSSL" class="form-control input-sm mySelect" name="SSL">
                                                    <option value="1">SI</option>
                                                    <option value="0">NO</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-12">
                                            <div class="input-group form-group">
                                                <span class="input-group-addon">
                                                    SMTP
                                                </span>
                                                <input type="text" class="form-control input-sm UpperCase" id="Smtp" name="Smtp" placeholder="Servidor SMTP">
                                            </div>
                                        </div>
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section js
{
    <script src="~/Content/assets/viewsjs/Ocurrencias/EditarCorreo.js"></script>
}