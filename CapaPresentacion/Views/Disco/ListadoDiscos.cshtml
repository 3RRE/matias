<style>

    @@keyframes alertaRoja {
        from {
            background-color: rgb(221, 51, 51);
        }

        to {
            background-color: rgba(221, 51, 51, 0.523);
        }
    }

    .emergencia {
        animation: alternate 1s alertaRoja infinite;
    }

    .normal {
        background-color: #69b169;
    }

    .table-striped > tbody > tr:nth-of-type(odd) {
        text-align: center;
    }

    .table-striped > tbody > tr:nth-of-type(even) {
        text-align: center;
    }
</style>

