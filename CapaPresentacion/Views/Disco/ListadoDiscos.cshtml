@section css
{
    <link rel="stylesheet" href="~/Content/assets/css/optional/bootstrap-multiselect.min.css" type="text/css" />
    <style>
        .highlighted-row {
            font-weight: bolder !important;
            color: blue !important;
        }

        .table-nr {
            width: 100% !important;
            position: relative;
            background-color: #FFFFFF;
            border-collapse: collapse;
        }

            .table-nr th, .table-nr td {
                text-align: center;
                vertical-align: middle;
                cursor: default;
                border: 1px solid #999999;
            }

            .table-nr .tr-th {
                height: 30px !important;
            }

            .table-nr .tr-td {
                height: 25px !important;
            }

            .table-nr thead .tr-th {
                background-color: #05256E;
                color: #FFFFFF;
                font-size: 12px;
            }

                .table-nr thead .tr-th th {
                    padding: 4px 2px;
                }

            .table-nr tbody .tr-td {
                background-color: #FFFFFF;
                font-size: 12px;
            }

                .table-nr tbody .tr-td td {
                    padding: 2px 2px;
                }

            .table-nr .text-left {
                text-align: left;
            }

            .table-nr .text-right {
                text-align: right;
            }

            .table-nr tbody tr:nth-child(even) {
                background: #EEEEEE;
            }

            .table-nr tbody tr:nth-child(odd) {
                background: #FFFFFF;
            }

            .table-nr .log-on {
                background-color: #E7FBE5;
            }

            .table-nr .log-off {
                background-color: #F4AFAA;
            }

            .table-nr .log-on .log-action {
                display: block;
                cursor: pointer;
            }

        .disable-select {
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        .table-reeport {
            width: 100%;
            position: relative;
            background-color: #FFFFFF;
            border-spacing: 0;
        }

            .table-reeport thead tr th {
                color: #FFFFFF;
                text-transform: uppercase;
            }

            .table-reeport tbody tr:hover {
                background-color: #EEEEEE !important;
            }

        /* multi select */
        .form-multiselect {
            border: 1px solid #4a85b7;
            overflow: hidden;
            height: 27px !important;
            line-height: 17px;
        }

            .form-multiselect .caret {
                position: absolute;
                top: 10px;
                right: 5px;
            }

        .multiselect-container.dropdown-menu {
            width: 100%;
            background: #FFFFFF !important;
        }

        .multiselect-container .multiselect-item .input-group-addon {
            position: absolute;
            left: 5px;
            top: 8px;
            z-index: 4;
            background: transparent;
            color: #999999;
            padding: 0;
            margin: 0;
            text-shadow: none;
        }

        .multiselect-container .multiselect-item .multiselect-search {
            height: 30px;
            padding: 5px 10px 5px 20px;
            box-shadow: none !important;
            border: 1px solid #EEEEEE !important;
        }

            .multiselect-container .multiselect-item .multiselect-search:focus {
                border-color: #E1E1E1 !important;
            }

        .multiselect-container .multiselect-item .btn-default {
            height: 30px;
            padding: 2px 4px;
            color: #484848;
            background: #EEEEEE;
            border: 1px solid #EEEEEE;
            box-shadow: none !important;
        }

            .multiselect-container .multiselect-item .btn-default:hover {
                background: #E1E1E1;
            }

        .multiselect-container > li > a > label {
            padding: 5px 10px 5px 30px;
        }

            .multiselect-container > li > a > label > input[type=checkbox] {
                margin-top: 1px;
            }

        .multiselect-container.dropdown-menu > .active > a,
        .multiselect-container.dropdown-menu > .active > a:focus,
        .multiselect-container.dropdown-menu > .active > a:hover {
            background-color: #263E78 !important;
        }

            .multiselect-container.dropdown-menu > .active > a > label.checkbox,
            .multiselect-container.dropdown-menu > .active > a:focus > label.checkbox,
            .multiselect-container.dropdown-menu > .active > a:hover > label.checkbox {
                color: #FFFFFF !important;
            }

        /* multi select */
        .chrtanel {
            width: 100%;
            position: relative;
            background: #FFFFFF;
        }

        .chrtanel-body {
            position: relative;
            padding: 10px;
        }

        .room-dflex {
            display: flex;
            align-items: center;
        }

            .room-dflex .log-room {
                flex-grow: 1;
                display: block;
                line-height: 0;
                white-space: nowrap;
            }

            .room-dflex .log-chart-action {
                cursor: pointer;
                font-size: 16px;
                color: #074B88;
                margin: 1px;
                display: block;
                line-height: 0;
            }
    </style>
}

