@using S3k.Utilitario
@{
    ViewBag.Title = "Asignar Anfitrionas";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string fecha_archivos = ClaseEncriptacion.EncriptarCadenaHASH(Convert.ToString(DateTime.Now));
}

@section css {
    <style>
        .select2-container--default .select2-results__group {
            margin: 7px 0;
        }
    </style>
}

<div class="row">
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12">
                            <h1>
                                <span aria-hidden="true" class="icon las la-bell"></span>
                                <span class="main-text">
                                    @ViewBag.Title
                                </span>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12  col-xs-12">
                            <div class="row">
                                <div class="col-sm-12 col-md-12">
                                    <div class="input-group ">
                                        <span class="input-group-addon">
                                            Sala
                                        </span>
                                        <select class="form-control input-sm codSala" id="cboSala">
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*<div class="col-md-6  col-xs-12">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <button type="button" id="btnNuevo" data-nombre="Nuevo Producto" class="btn btn-sm btn-success col-md-12 col-xs-12">
                                        <span class="glyphicon glyphicon-plus"></span>
                                        Nuevo
                                    </button>
                                </div>
                            </div>
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12 tam">
                            <div class="table-responsive">
                                <table id="table" class="table table-striped table-bordered table-hover table-condensed">
                                    <thead>
                                        <tr>
                                            @*<th>ID BUK</th>*@
                                            <th>Empresa</th>
                                            <th>Sede</th>
                                            <th>Nombre</th>
                                            <th>Apellido Paterno</th>
                                            <th>Apellido Materno</th>
                                            <th>Nro Documento</th>
                                            @*<th>Código Empresa</th>
                                            <th>Código Sede</th>*@
                                            <th>Puesto</th>
                                            <th>Estado</th>
                                            <th>Correo</th>
                                            <th>Acción</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section js
{
    <script src="~/Content/assets/viewsjs/Cortesias/Anfitrionas.js?v=@fecha_archivos"></script>
}