@using S3k.Utilitario
@{
    ViewBag.Title = "Reporte Productos de Cortesias";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string fecha_archivos = ClaseEncriptacion.EncriptarCadenaHASH(Convert.ToString(DateTime.Now));
}

@section css {
    <style>
        .select2-container--default .select2-results__group {
            margin: 7px 0;
        }
    </style>
}

<div class="row">
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12">
                            <h1>
                                <span aria-hidden="true" class="icon las la-bell"></span>
                                <span class="main-text">
                                    @ViewBag.Title
                                </span>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <button type="button" id="btnBuscar" class="btn btn-sm btn-primary col-md-12 col-xs-12">
                                <span class="glyphicon glyphicon-search"></span>
                                Buscar
                            </button>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <button type="button" id="btnExcel" class="btn btn-sm btn-success col-md-12 col-xs-12">
                                <span class="glyphicon glyphicon-file"></span>
                                Excel
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-sm-6 col-md-4">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    Desde
                                </span>
                                <input type="text" class="form-control input-sm dateFilter" id="fechaDesde" readonly />
                                <span class="input-group-addon input-group-icon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-4">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    Hasta
                                </span>
                                <input type="text" class="form-control input-sm dateFilter" id="fechaHasta" readonly />
                                <span class="input-group-addon input-group-icon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-4">
                            <div class="input-group ">
                                <span class="input-group-addon">
                                    Sala
                                </span>
                                <select class="form-control input-sm" id="cboSala">
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-4">
                            <div class="input-group ">
                                <span class="input-group-addon">
                                    Tipo
                                </span>
                                <select class="form-control input-sm" id="cboTipo">
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-4">
                            <div class="input-group ">
                                <span class="input-group-addon">
                                    Sub Tipo
                                </span>
                                <select class="form-control input-sm" id="cboSubTipo">
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-4">
                            <div class="input-group ">
                                <span class="input-group-addon">
                                    Producto
                                </span>
                                <select class="form-control input-sm" id="cboProducto">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12 tam">
                            <div class="table-responsive">
                                <table id="table" class="table table-striped table-bordered table-hover table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Cod. Sala</th>
                                            <th>Sala</th>
                                            <th>Tipo</th>
                                            <th>Sub Tipo</th>
                                            <th>Marca</th>
                                            <th>Producto</th>
                                            <th>Cantidad</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row " style="display: flex; justify-content: center;">
                        <div class="col-xl-8 col-md-10 col-sm-12" style="background-color: white">
                            <img id="previewChart" class="img-fluid" style="height: 30vh; max-height:30vh; display: block; margin: auto; object-fit: contain;" src="~/Content/assets/images/horizontal-bar-chart-linear.png" />
                            <div id="viewChart">
                                <canvas id="products-chart" class="chart-canvas"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section js
{
    <script src="~/Content/assets/viewsjs/Cortesias/Reportes/filtros.js?v=@fecha_archivos"></script>
    <script src="~/Content/assets/viewsjs/Cortesias/Reportes/productos.js?v=@fecha_archivos"></script>
}
