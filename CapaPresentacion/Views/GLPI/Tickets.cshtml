<style>
    .contenedor {
        background-color: white;
        width: 100%;
        height: 100%;
        min-height: 100vh;
        border-radius: 5px !important;
        padding: 15px;
    }

    .btnGlpi {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 5px;
    }

    .sheet-container {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: flex-end
    }

    

    .sheet {
        background-color: white;
        padding: 25px;
        max-width: 380px;
        height: 100%;
        width: 100%;
        transform: translateX(100%);
        transition: transform 0.5s ease;
        position: fixed;
        top: 0;
        box-shadow: #1a2641 1px 20px 5px 1px;
    }

        .sheet.active {
            transform: translateX(0);
        }

    .sheet-input {
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .tabs {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .tab {
        cursor: pointer;
        padding: 10px 20px;
        border-radius: 5px;
        display: flex;
        align-items: center;
        gap: 10px;
        background-color: #f1f1f1;
        transition: background-color 0.3s;
        cursor: pointer;
    }

        .tab.active {
            background-color: #007bff;
            color: white;
        }

    .tab-icon {
        width: 20px;
        height: 20px;
    }

    .tab-content {
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #fff;
    }

    .file-upload-container {
        width: 100%;
        min-height: 150px;
        border: 2px dashed gray;
        border-radius: 5px;
        text-align: center;
        cursor: pointer;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        transition: border-color 0.3s ease;
    }

        .file-upload-container.has-files {
            border: none;
        }

    .file-upload-placeholder {
        font-size: 14px;
        color: gray;
    }

    .file-preview {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: center;
        align-items: center;
        width: 100%;
    }

    .file-item {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px;
        border: 1px solid;
        width: 100px;
        height: 120px;
        background-color: white;
        width: 100%;
    }

        .file-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .file-item .file-icon {
            font-size: 60px;
        }

        .file-item.excel {
            border-color: green;
            color: green;
            border-radius: 5px !important;
            display: flex;
            gap: 4px;
            width: 100%;
            justify-content: space-around;
        }

        .file-item.word {
            border-color: blue;
            color: blue;
            border-radius: 5px !important;
            display: flex;
            gap: 4px;
            width: 100%;
            justify-content: space-around;
        }

        .file-item.pdf {
            border-color: red;
            color: red;
            border-radius: 5px !important;
            display: flex;
            gap: 4px;
            width: 100%;
            justify-content: space-around;
        }

    .file-name {
        font-size: 12px;
        font-weight: bold;
        text-align: center;
    }

    .file-size {
        font-size: 10px;
        color: gray;
        text-align: center;
    }

    .file-input {
        display: none;
    }


    /* tickets*/
    .grid-container {
        display: grid;
        gap: 20px;
        grid-template-columns: repeat(1, 1fr);
    }

    .ticket-container {
        border: 1px solid;
        border-radius: 5px !important;
        padding: 15px;
        cursor: pointer;
        transition: all .3s ease;
        border-color: rgb(219 219 219);
        box-shadow: 1px 3px 4px #ececec;
    }
        .ticket-container:hover {
            transform: translateY(-10px);
        }

