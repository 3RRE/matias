@{
    ViewBag.Title = "Cambiar Contrasenia";
    Layout = "~/Views/Shared/_Super.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">

                    <div class="row">
                        <div class="col-md-12">
                            <h1>
                                <span aria-hidden="true" class="icon icon-shield"></span>
                                <span class="main-text">
                                    Cambiar Contraseña
                                </span>

                            </h1>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12 tam">

                            <div class="">
                                <table id="tableUsuario" class="table table-striped table-bordered table-hover table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Nombre Empleado</th>
                                            <th>Usuario</th>
                                            <th>FailedAttempts</th>
                                            <th>Rol</th>
                                            <th>Accion</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>

                                </table>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

@section modal{

    <div class="modal fade full-modal" id="full-modal_cambiar" tabindex="-1" role="dialog" aria-labelledby="full-modal-label" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content" data-border-top="multi">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="full-modal-label_"> <span id="textCambiar">Nueva</span> Contraseña</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12" id="divcambiar">
                            <form id="form_registro_cambiar">
                                <input type="hidden" name="RowID" value="0" id="RowID" />
                                <input type="hidden" name="UsuarioID" value="0" id="UsuarioID" />
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Nueva Contraseña
                                            </span>
                                            <input type="text" class="form-control input-sm noKeyPress" id="UsuarioContraseña" value="" name="UsuarioContraseña" placeholder="Contraseña" autofocus>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="" class="btn btn-sm btn-warning" data-dismiss="modal">Cerrar</a>
                    <a href="" class="btn btn-sm btn-danger btnGuardar">Guardar</a>
                </div>
            </div>
        </div>
    </div>
}


@section js
{
    <script src="~/Content/assets/viewsjs/Super/ContraseniaUsuarios.js"></script>
}