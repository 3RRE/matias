<style>

    .container-cargo {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        grid-gap: 10px; /* Espacio entre las celdas */
        place-content: center;
       
    }
    .card-cargo {
        background-color: #FFEBCD;
        border: 1px solid #dddddd;
        height: 50px;
        width: 100%;
        border-radius: 5px !important;
        cursor: pointer;
        padding: 5px 15px;
        position: relative;
        display: flex;
        align-items: center;
        font-size:14px
    }
    .card-cargo:active {
        transform: scale(0.95);
    }
    .cont-option {
        height: 85vh;
        overflow-y: scroll;
        overflow-x: hidden;
        margin-bottom: 15px;
    }

    .card-hall {
        height: 40px;
        display: flex;
        align-items: center;
        padding: 25px 11px;
        background-color: white;
        border-bottom: 1px solid #dddddd;
        transition:all .4s ease;
        cursor:pointer
    }

        .card-hall:hover {
            background-color: #1F91EF !important;
            color:white
        }
   

    .nav-tabs > li.active > a {
        background-color: blanchedalmond !important;
    }

   
    /*INPU STYLE*/
    .search {
        border: none !important;
        padding: 0 15px;
        width: 100%;
        height: 100%;
        border-radius: 5px !important;
        border: 1px solid #DDDDDD !important;
        background-color: #F5F5F5
    }

    .search:focus {
        outline: none;
        border: solid 1px #1F91EF !important;
    }

    .search-input {
        position: relative;
        width: 350px;
        height: 45px;
    }

    /*CHECKBOX STYLE*/
    .cont-radio{
        position:absolute;
        right:5px;
    }
    .round {
        position: relative;
        width: 30px;
    }

    .round label {
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 50% !important;
        cursor: pointer;
        height: 28px;
        left: 0;
        position: absolute;
        top: 0;
        width: 28px;
    }

    .round label:after {
        border: 2px solid #fff;
        border-top: none;
        border-right: none;
        content: "";
        height: 6px;
        left: 7px;
        opacity: 0;
        position: absolute;
        top: 8px;
        transform: rotate(-45deg);
        width: 12px;
    }

    .round input[type="checkbox"] {
        visibility: hidden;
    }

        .round input[type="checkbox"]:checked + label {
            background-color: #109728;
            border-color: #109728;
        }

    .round input[type="checkbox"]:checked + label:after {
        opacity: 1;
    }

    /**divider*/

    .divider2{
        width:100%;
        height:1px;
        background-color:#dddddd;
        margin:15px 0;
    }

    .container-config {
        display: flex;
        justify-content: center;
        gap: 18px;
    }
    .container-halls {
        background-color: white;
        width: 25vw;
        display: flex;
        flex-direction: column;
        border-radius: 8px !important;
        overflow: hidden;
        padding: 20px 0;
    }
    .halls-list {
        height: 65vh;
        overflow-y: scroll;
        display: flex;
        flex-direction: column;
    }
    .containerCargo {
        background-color: white;
        width: 75vw;
        border-radius: 8px !important;
        overflow: hidden;
        padding: 25px 0;
    }


   

    @@media(max-width:990px) {
        .cont-option {
            height: 30vh;
        }

        .cont-config {
            padding: unset;
            padding-right: unset !important;
        }
        .container-config{
            flex-direction:column;
        }
        .container-halls{
            width:100%
        }
        .halls-list{
            height:20vh
        }
        .containerCargo{
            width:100%
        }
    }

   
</style>

<div class="row" style="width:100%; background-color:white; margin:auto; padding: 20px 10px; border-radius:8px !important; margin-bottom:10px">
        <h1>
            <span aria-hidden="true" class="icon icon-alarm-clock"></span>
            <span class="main-text">
                Configuracion Alerta Billeteros Cargo
            </span>
        </h1>

</div>


<div class="block">
    <div class="block-content-outer">

        <div id="AppConfiguracionAlerta">
            <div v-if="verInfo == false" style="background-color: #f3f4f3; height: 100vh; width: 97%; z-index: 500; position: absolute"></div>

            <div class="container-config">

                <div class="container-halls">

                    <div style="height: 110px; display: flex; justify-content: center; padding: 0 15px; flex-direction: column; ">
                        <span style="font-size: 18px; color: #373737; font-weight: 700;">Salas</span>
                        <div class="search-input" style="width: 100%">
                            <input v-model="filtroSala" class="search" placeholder="Buscar sala" style="min-height:45px; width:100%" />
                            <span class="glyphicon glyphicon-search" style="position: absolute; right: 15px; top: 13px; font-size: 20px; color: #c4c4c4; "></span>
                        </div>
                    </div>

                    <div class="divider2"></div>

                    <div class="halls-list">
                        <div v-for="(card, index) in datosSalaFiltrados" :key="index" @@click="selectHall(card)" :style="{
                'background-color':  hallSelect ===card.CodSala ? '#1F91EF' :(index % 2 === 0 ? '#f5f5f5':''), 'color': hallSelect ===card.CodSala ? 'white':''} "
                             class="card-hall">

                            {{card.Nombre}}

                        </div>
                    </div>

                </div>
            <div class="containerCargo">
                <div style="padding:0 15px">
                    <div style="display:flex; justify-content:space-between; align-items:center;margin-bottom:10px">
                        <span style="font-size: 18px; color: #373737; font-weight: 700;">Cargos {{position.Nombre}}</span>
                        <div>
                            @*{{alerta}} raaa
                    {{billetero}}
                    {{evento}}*@

                            <div style="display:flex; align-items:center;gap:3px; margin-bottom:10px; cursor:pointer" @@click="asignarBilletero">
                                <input type="checkbox" id="billetero" style="margin: 0; pointer-events: none;" v-model="billetero" /> <label style="pointer-events: none;" for="billetero">Alerta Billeteros</label>
                            </div>
                            <div style="display: flex; align-items: center; gap: 3px; cursor: pointer" @@click="asignarEvento">
                                <input type="checkbox" id="evento" style="margin: 0; pointer-events: none;" v-model="evento" /> <label style="pointer-events: none;" for="evento">Alerta Eventos</label>
                            </div>
                        </div>

                    </div>
                    <div class="search-input" style="width:100%">
                        <input v-model="filtroCargo" class="search" placeholder="Buscar cargo" />
                        <span class="glyphicon glyphicon-search" style="position: absolute; right: 15px; top: 13px; font-size: 20px; color: #c4c4c4; "></span>
                    </div>
                </div>


                <div class="divider2"></div>
                <div style="display:flex; justify-content:space-between; align-items:center; padding:10px 20px;">
                    <div>
                        <button type="button" class="btn btn-xs btn-light" @@click="sincronizarOnline()">
                            <i class="fa fa-refresh"></i>
                            <span>Sincronizar Online</span>
                        </button>
                    </div>
                    <div style="background-color:#fc6603; border-radius:7px !important; padding: 2px 5px; color:white">
                        {{agregadoCargo}} /
                        {{totalCargo}}

                    </div>
                </div>
                <div style=" height: 65vh; overflow-y: scroll;">
                    <div class="container-cargo" style="padding: 10px 15px; ">
                        <div style="" class="card-cargo" v-for="(positionData, indexPosition) in datosCargoFiltrados.cargos" :key="indexPosition" @@click="toggleCheckbox(positionData)">
                            <div class="cont-radio">
                                <div class="round">
                                    <input type="checkbox" checked id="checkbox" v-model="positionData.isChecked" />
                                    <label for="checkbox" style="pointer-events: none;"></label>
                                </div>
                            </div>

                            <label style="font-size:14px">{{positionData.Descripcion}}</label>
                        </div>
                    </div>
                </div>



            </div>
            </div>

        </div>

    </div>

</div>



