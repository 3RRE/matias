@{
    ViewBag.Title = "listado de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Activities.Expressions
@using System.Web.Script.Serialization
@using System.Web.UI.WebControls
@{
    string buscar = new JavaScriptSerializer().Serialize(ViewBag.buscar);

}
<script type="text/javascript">
    buscar = (@Html.Raw(buscar));

</script>
<style>
    .sorting, .sorting_disabled, .sorting_asc, .sorting_desc {
        background-color: #0b1f46 !important;
        height: 40px;
    }

    tr {
        height: 34px;
    }

    .even {
        background-color: white !important;
    }


</style>
<div class="row">
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">

                    <div class="row">
                        <div class="col-md-12">
                            <h1>
                                <span aria-hidden="true" class="icon icon-shield"></span>
                                <span class="main-text">
                                    Listado de Clientes SISCLIE
                                </span>
                            </h1>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-offset-4 col-md-4 col-sm-6 col-xs-6">
                            <button type="button" id="btnNuevoCliente" class="btn btn-sm btn-success col-md-12 col-xs-12">
                                <span class="glyphicon glyphicon-book"></span>
                                Nuevo
                            </button>
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-6">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <button type="button" id="btnExcel" data-permiso="@buscar" class="btn btn-primary btn-sm col-md-12 col-xs-12">
                                        <span class="glyphicon glyphicon-file"></span>
                                        Excel
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">

        <div class="block">

                <div class="block-content-outer">
                    <div class="block-content-inner">
                        <div class="cardMachine" style="margin-bottom:15px;">

                            <fieldset class="sectionCard" style="padding: 10px 7px; margin-top: 10px;">
                                <h3 style="margin-bottom:10px;">Búsqueda de cliente</h3>
                                <div class="row">
                                    @if (buscar == "true")
                                    {
                                        <div class="col-md-offset-3 col-md-6">
                                            <div class="input-group form-group">
                                                <span class="input-group-addon" style="font-size:9px">
                                                    Nro. Documento
                                                </span>
                                                <input type="text" class="form-control input-sm" id="txt_nrodoc" name="nrodoc" placeholder="">
                                                <span class="input-group-addon btnBuscar" style="cursor: pointer; font-size: 9px;">
                                                    <i class="fa fa-search"></i> Buscar
                                                </span>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <hr style="margin-top:4px;" />
                                        </div>
                                    }


                                    <div class="col-md-12">

                                        <div class="table-responsive">
                                            <table id="tableCliente" class="table table-condensed table-bordered table-hover" style="width:100%">
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>
            </div>
        </div>
        </div>
    </div>


@section js
{
    <script src="~/Content/assets/viewsjs/AsistenciaCliente/ListadoCliente.js"></script>
}