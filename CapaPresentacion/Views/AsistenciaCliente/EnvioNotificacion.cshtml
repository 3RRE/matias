@{
    ViewBag.Title = "Notificaciones a Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section css
{
    <style>
        .icheckbox_bg-white {
            background-color: #FFFFFF;
        }

        .badge-ludopata {
            color: #fff;
            background-color: #FF8C00;
        }

        .badge-prohibido {
            color: #fff;
            background-color: #DC3545;
        }

        .badge-roba-stacker {
            color: #fff;
            background-color: #6F42C1;
        }

        .check-disabled {
            cursor: not-allowed; /* Cursor de prohibido */
            opacity: 0.5; /* Reduce la opacidad */
            color: gray; /* Cambia el color del texto */
        }
    </style>
}

<div class="row">
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">

                    <div class="row">
                        <div class="col-md-12">
                            <h1>
                                <span aria-hidden="true" class="icon las la-bell"></span>
                                <span class="main-text">
                                    Notificaciones a Clientes
                                </span>
                            </h1>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <button type="button" id="btnBuscar" class="btn btn-sm btn-primary col-md-12 col-xs-12">
                                <span class="glyphicon glyphicon-search"></span>
                                Buscar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-sm-6 col-md-3">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    DNI
                                </span>
                                <input type="text" class="form-control input-sm" autocomplete="off" id="numeroDocumento" placeholder="12345678"/>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-3">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    Nombres
                                </span>
                                <input type="text" class="form-control input-sm" autocomplete="off" id="nombres" placeholder="Juan"/>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-3">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    Ape. Paterno
                                </span>
                                <input type="text" class="form-control input-sm" autocomplete="off" id="apellidoPaterno" placeholder="Perez"/>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-3">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    Ape. Materno
                                </span>
                                <input type="text" class="form-control input-sm" autocomplete="off" id="apellidoMaterno" placeholder="Sanchez" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12 tam">
                            <div class="table-responsive">
                                <table id="table" class="table table-striped table-bordered table-hover table-condensed">
                                    <thead>
                                        <tr>
                                            <th><i class="glyphicon glyphicon-check"></i> WSP</th>
                                            <th><i class="glyphicon glyphicon-check"></i> SMS</th>
                                            <th><i class="glyphicon glyphicon-check"></i> Llamada</th>
                                            <th><i class="glyphicon glyphicon-check"></i> Email</th>
                                            <th>Cod. Sala</th>
                                            <th>Sala</th>
                                            <th>Número Documento</th>
                                            <th>Cliente</th>
                                            <th>Tipo de Registro</th>
                                            <th>Observación</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section js
{
    <script src="~/Content/assets/viewsjs/AsistenciaCliente/EnvioNotificacion.js"></script>
}