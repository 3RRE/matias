
@{
    ViewBag.Title = "TransferenciaATFormularioRegistro";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12 col-xs-12 col-sm-12">
                            <h1>
                                <span aria-hidden="true" class="icon icon-dollar"></span>
                                <span class="main-text">
                                    Formulario Registro
                                </span>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 col-md-offset-4 col-sm-5 col-xs-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">

                        <div class="col-md-12 col-sm-12">
                            <div class="input-group ">
                                <span class="input-group-addon">
                                    Sala
                                </span>
                                <select class="form-control input-sm codSalaAuditoria" id="cboSala" name="cboSala">
                                    <option value="">--Seleccione--</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <hr style="margin-top: 0px;margin-bottom:10px;" />
                            </div>
                        </div>
                        <div class="col-md-12 col-sm-12">
                            <div class="form-group">
                                <label for="NroTicket">Nro Ticket</label>
                                <input type="text" class="form-control input-sm " id="NroTicket" name="NroTicket" placeholder="Nro Ticket">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <hr style="margin-top: 0px;" />
                            </div>
                        </div>
                        <div class="col-md-12 col-sm-12">
                            <button class="btn btn-success btn-block" id="btnBuscar"><i class="fa fa-search"></i> Buscar</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

@section modal
{

    <div class="modal fade full-modal" id="full-modal_solicitud" tabindex="-1" role="dialog" aria-labelledby="full-modal-label" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" data-border-top="multi">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="full-modal-label_"> Solicitudes de Transferencia</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12" id="divsoli">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade full-modal" id="full-modal_transferencia" tabindex="-1" role="dialog" aria-labelledby="full-modal-label" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content" data-border-top="multi">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="full-modal-label">Nueva Transferencia</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12" style="margin-top: -14px;line-height: 1.2;display:none;" id="div_datosolicitud">
                            <h5 style="margin: 2px;text-align: center;">Datos de Solicitud</h5>
                            <div>Fecha : <span class="fechasol soliSpan"></span> - Sala : <span class="salasol soliSpan"></span></div>
                            <div>Tipo Doc. : <span class="tipodocsol soliSpan"></span> - Nro. : <span class="nrosol soliSpan"></span> - Cliente : <span class="clientesol soliSpan"></span></div>
                            <div>Banco : <span class="bancosol soliSpan"></span> - Cuenta : <span class="cuentasol soliSpan"></span> - Monto : <span class="montosol soliSpan"></span></div>

                            <div class="col-md-12 col-sm-12">
                                <div class="row">
                                    <hr style="margin-top: 10px;margin-bottom: 12px;border-top: 1px solid #a6aeb5;" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 col-sm-12">
                            <div class="input-group ">
                                <span class="input-group-addon">
                                    Sala
                                </span>
                                <select class="form-control input-sm codSalaAuditoria" id="cboSala" name="cboSala">
                                    <option value="">--Seleccione--</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-12 col-sm-12">
                            <div class="form-group">
                                <label for="txtMaterno">Nro Documento</label>
                                <input type="text" class="form-control input-sm " id="Nrodocumento" name="Nrodocumento" placeholder="Nro Documento">
                            </div>
                        </div>

                        <div class="col-md-12 col-sm-12" id="tableclientes" style="display:none">
                            <table class="table table-condensed table-bordered">
                                <thead>
                                    <tr>
                                        <th>Tipo Doc.</th>
                                        <th>Nro Doc.</th>
                                        <th>Cliente</th>
                                        <th><i class="glyphicon glyphicon-check"></i></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <div id="data_cliente">
                            <div class="col-md-12 col-sm-12" id="divcliente">
                                <div class="form-group" style="margin-bottom: 0px;">
                                    <div>Cliente - <span id="nom_cliente" style="color:#07196f;">Ingrese Número de documento y presione ENTER</span></div>
                                </div>
                            </div>
                            <input type="hidden" id="cliente_id" value="0" />
                            <input type="hidden" id="cliente_tipodoc" value="0" />
                            <input type="hidden" id="SolicitudTransferenciaID" value="0" />
                            <div class="col-md-12 col-sm-12">
                                <div class="form-group" id="cbo_bancoid">
                                    <label for="banco_id">Nro Cuenta</label>
                                    <select class="form-control input-sm " id="bancocuenta_id" name="bancocuenta_id">
                                        <option value="">--seleccione--</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label for="NroOperacion">Nro Operación</label>
                                    <input type="text" class="form-control input-sm " id="NroOperacion" name="NroOperacion" placeholder="Nro Operacion">
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label for="fecha">Fecha Operacion</label>
                                    <input type="text" class="form-control input-sm dateOnly1_" id="fecha" readonly name="fecha" placeholder="Fecha Operacion">
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label for="monto">Monto</label>
                                    <div class="input-group ">
                                        <span class="input-group-addon">
                                            S/.
                                        </span>
                                        <input type="text" class="form-control input-sm " id="monto" name="monto" placeholder="Monto">
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label for="imagenvoucher">Imagen</label>
                                    <div class="input-group ">
                                        <span class="input-group-addon">
                                            <i class="fa fa-image"></i>
                                        </span>
                                        <input id="imagenvoucher_div" name="imagenvoucher_div" class="form-control input-sm" readonly value="Seleccione Imagen" />
                                    </div>

                                    <input type="file" class="form-control input-sm" id="imagenvoucher" readonly name="imagenvoucher" placeholder="" style="display:none">
                                </div>
                            </div>

                            <div class="col-md-12 col-sm-12">
                                <div class="form-group">
                                    <label for="observacion">Observación</label>
                                    <textarea rows="4" class="form-control input-sm" id="observacion"></textarea>
                                </div>
                            </div>


                        </div>

                    </div>
                </div>
                <div class="modal-footer footer_g">

                    <button type="button" class="btn btn-danger btnGuardar">Guardar</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
}



@section js
{
    <script src="~/Content/assets/viewsjs/TransferenciasAT/FormularioRegistroVista.js"></script>
}


