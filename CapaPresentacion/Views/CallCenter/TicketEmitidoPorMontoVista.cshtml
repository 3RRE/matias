
@{
    ViewBag.Title = "Tickets Emitidos por Monto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12 col-xs-12 col-sm-12">
                            <h1>
                                <span aria-hidden="true" class="icon icon-block-menu"></span>
                                <span class="main-text">
                                    Tickets Emitidos por Monto
                                </span>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-4 col-sm-6 pull-right">
                            <button type="button" id="btnBuscar" class="btn btn-success btn-sm btn-block">
                                <i class="glyphicon glyphicon-book"></i> Buscar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row" id="formfiltro">
                        <div class="col-md-4 col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    Sala
                                </span>
                                <select class="form-control input-sm" id="cboSala" name="cboSala">
                                    <option value="">--Seleccione--</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="input-group ">
                                <span class="input-group-addon">
                                    Monto Ticket
                                </span>
                                <input type="text" class="form-control input-sm" name="txtMontoTicket" id="txtMontoTicket">
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    Cantidad
                                </span>
                                <input type="text" class="form-control input-sm" name="txtCantidad" id="txtCantidad">
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="form-group">
                                <div class="input-group date">
                                    <span class="input-group-addon">
                                        Fecha Inicio
                                    </span>
                                    <input type="text" name="txtFechaInicio" class="form-control input-sm" id="txtFechaInicio">
                                    <span class="input-group-addon input-group-icon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="form-group">
                                <div class="input-group date">
                                    <span class="input-group-addon">
                                        Fecha Fin
                                    </span>
                                    <input type="text" name="txtFechaFin" class="form-control input-sm" id="txtFechaFin">
                                    <span class="input-group-addon input-group-icon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <hr />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <table id="table" class="table table-striped table-condensed table-responsive table-bordered table-hover"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section js
{
    <script src="~/Content/assets/viewsjs/CallCenter/TicketEmitidoPorMontoVista.js"></script>
}




