
@{
    ViewBag.Title = "Tickets Registrados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-8 col-sm-12 col-xs-12">
                            <h1>
                                <span aria-hidden="true" class="icon icon-block-menu"></span>
                                <span class="main-text">
                                    Tickets Bolsa
                                </span>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-4 col-sm-12 col-xs-6  pull-right">
                            <button type="button" id="btnBuscar" class="btn btn-success btn-sm btn-block">
                                <i class="glyphicon glyphicon-book"></i> Buscar
                            </button>
                        </div>
                        <div class="col-md-4 col-xs-6 col-sm-12 pull-right">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <button type="button" id="btnExcel" class="btn btn-primary btn-sm col-md-12 col-xs-12">
                                        <span class="glyphicon glyphicon-file"></span>
                                        Excel
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row" id="formfiltro">
                        <div class="col-md-4 col-sm-12">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    Sala
                                </span>
                                <select class="form-control input-sm" id="cboSala" name="cboSala">
                                    <option value=""> -- Seleccione -- </option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    FECHA DE INICIO
                                </span>
                                <input type="text" class="form-control input-sm " id="fechaIni" readonly />
                                <span class="input-group-addon input-group-icon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>

                        <div class="col-md-4 col-sm-12">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    FECHA DE FIN
                                </span>
                                <input type="text" class="form-control input-sm " id="fechaFin" readonly />
                                <span class="input-group-addon input-group-icon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <hr />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <table id="table" class="table table-striped table-condensed table-responsive table-bordered table-hover"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section js
{
    <script src="~/Content/assets/viewsjs/CallCenter/TicketBolsaVista.js"></script>
}




