
@{
    ViewBag.Title = "Tickets Registrados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12 col-xs-12 col-sm-12">
                            <h1>
                                <span aria-hidden="true" class="icon icon-block-menu"></span>
                                <span class="main-text">
                                    Tickets Registrados
                                </span>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row" id="formfiltro">
                        <div class="col-md-4 col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    Sala
                                </span>
                                <select class="form-control input-sm" id="cboSala" name="cboSala">
                                    <option value=""> -- Seleccione -- </option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="input-group ">
                                <span class="input-group-addon">
                                    Nro. Ticket
                                </span>
                                <input type="text" class="form-control input-sm" name="txtNroTicket" id="txtNroTicket">
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <button type="button" id="btnBuscar" class="btn btn-success btn-sm btn-block">
                                <i class="glyphicon glyphicon-book"></i> Buscar
                            </button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <hr />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <table id="table" class="table table-striped table-condensed table-responsive table-bordered table-hover"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section js
{
    <script src="~/Content/assets/viewsjs/CallCenter/TicketRegistradoVista.js"></script>
}



