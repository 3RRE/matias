@{
    ViewBag.Title = "Mensajeria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    <link href="~/Content/assets/js/optional/bootstrap-switch/css/bootstrap3/bootstrap-switch.css" rel="stylesheet" />
    <style>
        @@keyframes decorador {
            from {
                transform: scale(1)
            }

            to {
                transform: scale(1.1)
            }
        }

        .contain-qr {
            padding: 25px 150px;
            background-color: white;
            border-radius: 5px !important;
        }

        .canvas, .canvas-add {
            position: relative;
            height: auto;
            width: auto;
        }

        .canvas::before, .canvas-add:before,
        .canvas::after, .canvas-add:after {
            content: ' ';
            height: 20%;
            width: 20%;
            position: absolute;
            animation: 1s alternate decorador infinite;
            border-radius: 4px !important;
        }

        .canvas::after {
            bottom: -5px;
            left: -5px;
            border-bottom: 3px solid rgb(55, 93, 196);
            border-left: 3px solid rgb(55, 93, 196);
        }

        .canvas::before {
            right: -5px;
            bottom: -5px;
            border-bottom: 3px solid rgb(55, 93, 196);
            border-right: 3px solid rgb(55, 93, 196);
        }

        .canvas-add::after {
            top: -5px;
            left: -5px;
            border-top: 3px solid rgb(55, 93, 196);
            border-left: 3px solid rgb(55, 93, 196);
        }

        .canvas-add::before {
            top: -5px;
            right: -5px;
            border-top: 3px solid rgb(55, 93, 196);
            border-right: 3px solid rgb(55, 93, 196);
        }

        .info-wa {
            display: flex;
            justify-content: space-between;
            color: #111330;
            font-weight: bold;
        }

        .profile-info-block {
            text-align: center;
            border-bottom: 1px solid white;
        }

        .text-white {
            color: white;
            !important
        }

        legend {
            color: #111330;
            font-weight: bold;
        }

        .containerMessage {
            display: flex;
            justify-content: center;
            display: flex;
        }

        @@media (max-width:800px) {
            .contain-qr {
                width: 100%;
                padding: 40px 5px !important;
                display: flex;
                justify-content: center;
                align-items: center;
                flex-direction: column;
            }

            .canvas, .canvas-add {
                width: 250px !important;
            }

            #qrcode {
                width: 250px !important;
            }

            .block-content-outer {
                width: 100% !important;
            }
        }

        @@media (max-width:490px) {
            .canvas, .canvas-add {
                width: 200px !important;
            }

            .info-wa {
                flex-direction: column;
                text-align: center;
            }

            #qrcode {
                width: 200px !important;
            }
        }

        @@media (max-width:990px) {
            .help-cont {
                margin-top: 10px;
            }
        }
    </style>
}

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12" style="display:flex; justify-content:space-between">
                            <h1>
                                <span aria-hidden="true" class="icon icon-comment"></span>
                                <span class="main-text">
                                    Mensajeria WhatsApp
                                </span>
                            </h1>
                            <div style="display: flex; align-items:center; gap:10px">
                                <h1>
                                    <span class="main-text">Servicio:</span>
                                </h1>
                                <input type="checkbox" id="chkStatusServerWhatsApp" checked>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" id="contentNoService">
    <div class="col-md-12">
        <div class="block ">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="profile-info">
                        <fieldset>
                            <div class="col align-self-center" style="display:flex;align-items:center;justify-content:center">
                                <div class="contain-qr" style="display:grid; place-items:center">
                                    <div style="display:flex;justify-content:center;font-size:20px;font-weight:bold;margin-bottom:15px;">
                                        <span style="text-align:center">Encienda el Servicio para realizar envío de mensajes</span>
                                    </div>
                                    <img src="~/Content/assets/images/start_service1.png" width="300" />
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" id="contentQrSession">
    <div class="col-md-12">
        <div class="block ">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="profile-info">
                        <fieldset>
                            <div class="col align-self-center" style="display:flex;align-items:center;justify-content:center">
                                <div class="contain-qr">
                                    <div style="display:flex;justify-content:center;font-size:20px;font-weight:bold;margin-bottom:15px;">
                                        <h1 style="text-align:center">INICIO DE SESIÓN</h1>
                                    </div>
                                    <div style="display:flex;justify-content:center;align-items:center;gap:10px;background-color: #D9D9D9; border-radius: 5px !important; padding: 10px;margin-bottom:40px;">
                                        <span class="glyphicon glyphicon-qrcode"></span>
                                        <h2 style="font-size:15px;font-weight:500;margin-top:4px;">Escanee el código QR</h2>
                                    </div>
                                    <div class="canvas">
                                        <div class="canvas-add">
                                            <canvas id="qrcode"></canvas>
                                            <div id="loader-container" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); display: flex; align-items: center; justify-content: center; flex-direction: column;">
                                                <div class="loader"></div>
                                                <p style="text-align: center; font-weight: bold; font-size: 1.2em; color: rgb(55, 93, 196);">Espere a que se genere un código QR...</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div style="color:#d40707;display:flex;gap:5px; margin-top:25px;font-size:12px;">
                                        <span class="glyphicon glyphicon-alert"></span>
                                        <p>Advertencia: El codigo se actualiza cada minuto</p>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@*El contenido del tooltop de la info de sesion*@
<div id="popover-info-session-content" style="display: none;">
    <ul style="padding:0px 0px 0px 10px;">
        <li>
            <span class="glyphicon glyphicon-user"></span>
            &nbsp;<b>Usuario:</b> <span id="infoUsuario">-</span>
        </li>
        <li>
            <span class="glyphicon glyphicon-phone-alt"></span>
            &nbsp;<b>Telefono:</b> <span id="infoNumeroTelefono">-</span>
        </li>
        <li>
            <span class="glyphicon glyphicon-tags"></span>
            &nbsp;<b>Plataforma:</b> <span id="infoPlataforma">-</span>
        </li>
    </ul>
</div>

@*El contenido del tooltop de ayuda*@
<div id="popover-help-content" style="display: none;">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-condensed text-center table-sm" style="font-size:1.2rem; text-align:center">
            <thead class="text-center">
                <tr>
                    <th>Formato</th>
                    @*<th>Caracter</th>*@
                    <th>Ejemplo</th>
                    <th>Resultado</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Negrita</td>
                    @*<td>*</td>*@
                    <td>*texto*</td>
                    <td><b>texto</b></td>
                </tr>
                <tr>
                    <td>Cursiva</td>
                    @*<td>_</td>*@
                    <td>_texto_</td>
                    <td><i>texto</i></td>
                </tr>
                <tr>
                    <td>Tachado</td>
                    @*<td>~</td>*@
                    <td>~texto~</td>
                    <td><del>texto</del></td>
                </tr>
                <tr>
                    <td>Monoespaciado</td>
                    @*<td>```</td>*@
                    <td>```texto```</td>
                    <td><span style="font-family: monospace;">texto</span></td>
                </tr>
            </tbody>
        </table>
        <b style="color: #1b8596;"><span class="glyphicon glyphicon-info-sign" style="top: 0px;"></span>Se pueden combinar de diferentes formas.</b>
    </div>
</div>

<div class="row" id="contentMessageSession">
    <div class="col-md-12" style="padding: 0px">
        <div class="block ">
            <div class="col-md-12">
                <div class="block-content-outer">
                    <div class="block-content-inner">
                        <fieldset>
                            <legend style="display:flex; justify-content:space-between;">
                                <span style="display:flex; align-items:center; gap:5px;">
                                    <i class="glyphicon glyphicon-envelope text-white"></i>
                                    Mensajeria
                                    <span class="tooltip-icon" id="popover-info-session">
                                        <i class="glyphicon glyphicon-info-sign text-white"></i>
                                    </span>
                                    <span class="tooltip-icon" id="popover-help">
                                        <i class="glyphicon glyphicon-text-height text-white"></i>
                                    </span>
                                </span>

                                <span>
                                    <span class="col-xs-12">
                                        <button type="button" id="btnLogout" class="btn btn-danger btn-sm col-md-12 col-xs-12" style="font-size:0.5em !important;">
                                            <span class="glyphicon glyphicon-log-out"></span>
                                            Cerrar Sesión
                                        </button>
                                    </span>
                                </span>
                            </legend>
                            <div class="row">
                                <div class="col-md-12">
                                    <form id="frmMensaje">
                                        <div class="row containerMessage">
                                            <div class="col-md-7 col-sm-12 col-xs-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon" style="min-width:120px;">
                                                        Destinatarios
                                                    </span>
                                                    <select class="form-control input-sm" id="cboContactos" name="contactos">
                                                    </select>
                                                </div>
                                                <div class="input-group">
                                                    <span class="input-group-addon" style="min-width:120px;">
                                                        Mensaje
                                                    </span>
                                                    <textarea class="form-control input-sm" id="txtMensaje" name="mensaje" style="resize:vertical;min-height:120px;">_Mensaje_ de ~prueba~ ```enviado``` desde el _*IAS*_.</textarea>
                                                </div>
                                                <div class="input-group " style="display:flex;justify-content:flex-end;align-items:flex-end;margin-top:20px;">
                                                    <button type="button" class="form-control col-12 btn btn-sm btn-success" id="btnSendMessage"><span class="glyphicon glyphicon-send" style="top: 0px;margin-right:10px;"></span>Enviar Mensaje</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section js {
    <script src="~/Content/assets/js/optional/bootstrap-switch/js/bootstrap-switch.js"></script>
    <script src="~/Content/assets/js/optional/socket.io/socket.io.min.js"></script>
    <script src="~/Content/assets/js/optional/qrious/qrious.min.js"></script>
    <script src="~/Content/assets/viewsjs/WhatsApp/Mensajeria/Sesion.js"></script>
}
