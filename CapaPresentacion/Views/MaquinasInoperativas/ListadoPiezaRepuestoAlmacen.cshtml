
@{
    ViewBag.Title = "Listado Repuesto por Almacen";
}
<style>
    .sorting, .sorting_disabled, .sorting_asc, .sorting_desc {
        background-color: #0b1f46 !important;
        height: 40px;
    }

    tr {
        height: 34px;
    }

    .even {
        background-color: white !important;
    }
</style>
<div class="row">
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12 col-xs-12 col-sm-12">
                            <h1>
                                <span aria-hidden="true" class="icon icon-dollar"></span>
                                <span class="main-text">
                                    Listado Repuesto por Almacen
                                </span>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">

                    <div class="row">

                        <div class="col-md-4 col-sm-4 col-xs-4">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <button type="button" id="btnNuevo" class="btn btn-sm btn-success col-md-12 col-xs-12">
                                        <span class="glyphicon glyphicon-book"></span>
                                        Nuevo
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-4">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <button type="button" id="btnExcel" class="btn btn-primary btn-sm col-md-12 col-xs-12">
                                        <span class="glyphicon glyphicon-file"></span>
                                        Excel
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-4">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <button type="button" id="btnBuscar" class="btn btn-success btn-sm col-md-12 col-xs-12">
                                        <span class="glyphicon glyphicon-book"></span>
                                        Buscar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">

                        <div class="col-xs-12 col-md-12 col-sm-12">

                            <div class="row" id="formfiltro">

                                <div class="col-md-6 col-sm-6">
                                    <div class="input-group ">
                                        <span class="input-group-addon">
                                            Sala
                                        </span>
                                        <select class="form-control input-sm codSalaFiltro" id="cboSalaFiltro" name="cboSalaFiltro"></select>
                                    </div>
                                </div>

                                <div class="col-md-6 col-sm-6">
                                    <div class="input-group ">
                                        <span class="input-group-addon">
                                            Almacen
                                        </span>
                                        <select class="form-control input-sm codAlmacenFiltro" id="cboAlmacenFiltro" name="cboAlmacenFiltro"></select>
                                    </div>
                                </div>

                                <div class="col-md-4 col-sm-4" hidden>
                                    <div class="input-group ">
                                        <span class="input-group-addon">
                                            Tipo
                                        </span>
                                        <select id="cboTipoFiltro" class="form-control input-sm select" name="cboTipoFiltro" >
                                            <option value="0">Repuesto</option>
                                            @*<option value="0">Pieza y Repuesto</option>
                                            <option value="1">Pieza</option>
                                            <option value="2">Repuesto</option>*@
                                        </select>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="col-md-12">
                            <hr style="margin-top:10px;" />
                            <table id="tablePiezaRepuestoAlmacen" class="table table-striped table-bordered table-hover table-condensed">
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>


