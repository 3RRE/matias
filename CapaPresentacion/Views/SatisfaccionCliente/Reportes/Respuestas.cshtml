@using S3k.Utilitario
@{
    ViewBag.Title = "Reporte Respuestas de Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string fecha_archivos = ClaseEncriptacion.EncriptarCadenaHASH(Convert.ToString(DateTime.Now));
}

@section css {
    <style>
        .select2-container--default .select2-results__group {
            margin: 7px 0;
        }
        .nav-tabs>li>a {
            color: #fff;
        }
        .nav-tabs>li>a:hover {
            color: #000;
        }
    </style>
}

<div class="row">
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12">
                            <h1>
                                <span aria-hidden="true" class="icon las la-bell"></span>
                                <span class="main-text">
                                    @ViewBag.Title
                                </span>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-6 col-sm-6">
                            <button type="button" id="btnBuscar" class="btn btn-sm btn-primary col-md-12 col-xs-12">
                                <span class="glyphicon glyphicon-search"></span>
                                Buscar
                            </button>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <button type="button" id="btnExcel" class="btn btn-sm btn-success col-md-12 col-xs-12">
                                <span class="glyphicon glyphicon-file"></span>
                                Excel
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-sm-6 col-md-4">
                            <div class="input-group ">
                                <span class="input-group-addon">
                                    Sala
                                </span>
                                <select class="form-control input-sm" id="cboSala">
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-4">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    Desde
                                </span>
                                <input type="text" class="form-control input-sm dateFilter" id="fechaDesde" readonly />
                                <span class="input-group-addon input-group-icon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-4">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    Hasta
                                </span>
                                <input type="text" class="form-control input-sm dateFilter" id="fechaHasta" readonly />
                                <span class="input-group-addon input-group-icon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#table-panel" aria-controls="table-panel" role="tab" data-toggle="tab">Tabla</a></li>
        <li role="presentation"><a href="#bar-chart-panel" aria-controls="bar-chart" role="tab" data-toggle="tab">Gráfico</a></li>
    </ul>
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="table-panel">
            <div class="row">
                <div class="col-md-12">
                    <div class="block">
                        <div class="block-content-outer">
                            <div class="block-content-inner">
                                <div class="row">
                                    <div class="col-md-12 tam">
                                        <div class="table-responsive">
                                            <table id="table" class="table table-striped table-bordered table-hover table-condensed">
                                                <thead>
                                                    <tr>
                                                        <th>Cod. Sala</th>
                                                        <th>Sala</th>
                                                        <th>Número Documento</th>
                                                        <th>Cliente</th>
                                                        <th>Pregunta</th>
                                                        <th>Puntaje</th>
                                                        <th>Puntaje Texto</th>
                                                        <th>Fecha Registro</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div role="tabpanel" class="tab-pane" id="bar-chart-panel">
            <div class="row">
                <div class="col-md-12">
                    <div class="block">
                        <div class="block-content-outer">
                            <div class="block-content-inner">
                                <div class="row " style="display: flex; justify-content: center;">
                                    <div class="col-xl-8 col-md-10 col-sm-12" style="background-color: white">
                                        <img id="previewChart" class="img-fluid" style="height: 30vh; max-height:30vh; display: block; margin: auto; object-fit: contain;" src="~/Content/assets/images/horizontal-bar-chart-linear.png" />
                                        <div id="viewChart">
                                            <canvas id="responses-chart" class="chart-canvas"></canvas>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section js
{
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>
    <script src="~/Content/assets/viewsjs/SatisfaccionCliente/Reportes/filtros.js?v=@fecha_archivos"></script>
    <script src="~/Content/assets/viewsjs/SatisfaccionCliente/Reportes/respuestas.js?v=@fecha_archivos"></script>
}
