
@{
    ViewBag.Title = "UsuarioEncriptacionEditarVista";
}

@using System.Activities.Expressions
@using System.Web.Script.Serialization
@using System.Web.UI.WebControls
@{
    String usuario = new JavaScriptSerializer().Serialize(ViewBag.Usuario);
}
<script type="text/javascript">
    usuario= (@Html.Raw(usuario));
</script>


@section css
{
    <style type="text/css">
        .help-block {
            display: none !important;
        }
    </style>
}
<div class="row">
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-xs-12 col-md-12">
                            <h1>
                                <span aria-hidden="true" class="icon icon-shield"></span>
                                <span class="main-text">
                                    Editar Usuario Encript/Decript
                                </span>
                            </h1>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">

                        <div class="col-md-4 col-md-offset-4 col-sm-6 col-xs-6">
                            <button type="button" class="btn btn-success btn-sm col-md-12 col-sm-12 col-xs-12 btnListar"><span class="glyphicon glyphicon-list-alt"></span> Listado </button>
                        </div>

                        <div class="col-md-4 col-sm-6 col-xs-6">
                            <button type="button" class="btn btn-primary btn-sm col-md-12 col-sm-12 col-xs-12 btnGuardar "><span class="glyphicon glyphicon-floppy-disk"></span> Guardar </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row auditoriaForm">
    <div class="col-md-12 col-sm-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form class="medium" role="form" id="frmNuevo" method="post" action="#">
                        <div class="row">
                            <input type="hidden" name="Id" id="txtId" />
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label mb-10">Nombre</label>
                                    <input type="text" id="txtUsuarioNombre" name="UsuarioNombre" class="form-control input-sm">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label mb-10">Fecha de Inicio</label>
                                    <div class="input-group">
                                        <input type="text" id="txtFechaInicio" name="FechaIni" class="form-control input-sm">
                                        <span class="input-group-btn">
                                            <button type="button" class="btn btn-sm btn-icon-anim btn-twitter btn-square"><i class="fa fa-calendar"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label mb-10">Fecha Fin</label>
                                    <div class="input-group">
                                        <input type="text" id="txtFechaFin" name="FechaFin" class="form-control input-sm">
                                        <span class="input-group-btn">
                                            <button type="button" class="btn btn-sm btn-icon-anim btn-twitter btn-square"><i class="fa fa-calendar"></i></button>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label mb-10">Estado</label>
                                    <select class="form-control input-sm" id="cboEstado" name="Estado1">
                                        <option value="">--Seleccione--</option>
                                        <option value="1">Activo</option>
                                        <option value="0">InActivo</option>
                                    </select>
                                </div>
                            </div>
                            <input type="hidden" class="form-control input-sm " id="txtEstado" name="Estado" placeholder="">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>


@section js
{
    <script src="~/Content/assets/viewsjs/UsuarioEncriptacion/UsuarioEncriptacionEditarVista.js"></script>
}





