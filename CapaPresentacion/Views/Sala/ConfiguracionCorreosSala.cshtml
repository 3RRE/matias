
@{
    ViewBag.Title = "ConfiguracionCorreosSala";
}


@section css
{
    <style>
        .form-select-wrap .select2-selection--single {
            height: 34px !important;
        }

        .form-select-wrap .select2-selection__rendered {
            line-height: 32px !important;
        }

        .form-select-wrap .select2-selection__arrow {
            height: 32px !important;
        }

        .irequired {
            color: #D43443;
        }

        .toggle-custom .toggle.btn-sm {
            width: 75px !important;
            height: 20px !important;
            min-width: 50px;
            min-height: 25px;
            border: 1px solid #C7C7C7;
        }

        .toggle-custom .toggle-on, .toggle-custom .toggle-off {
            line-height: 1;
        }

        .toggle-custom .toggle-on {
            color: #FFFFFF !important;
            background: #1BA345 !important;
        }

        .toggle-custom .toggle-off {
            color: #FFFFFF !important;
            background: #D43443 !important;
        }
    </style>
}

<!-- row -->
<div class="row">
    <!-- col -->
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12">
                            <h1>
                                <span aria-hidden="true" class="icon las la-map-signs"></span>
                                <span class="main-text">
                                    @ViewBag.Title
                                </span>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /col -->
    <!-- col -->
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="pull-right col-md-4 col-sm-4 col-xs-6">
                            <button type="button" class="btn btn-sm btn-success col-md-12 col-xs-12 btn_agregar_zona">
                                <span class="glyphicon glyphicon-book"></span>
                                Nuevo
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /col -->
</div>
<!-- /row -->
<!-- row -->
<div class="row">
    <!-- col -->
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table id="tableZone" class="table table-striped table-bordered table-hover table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>SalaId</th>
                                            <th>Nombre Sala</th>
                                            <th>Correo Electronico</th>
                                            <th>Contraseña</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /col -->
</div>
<!-- /row -->

