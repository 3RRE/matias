@using S3k.Utilitario;

@{
    ViewBag.Title = "listado de Persona Prohibido Ingreso";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string fecha_archivos = ClaseEncriptacion.EncriptarCadenaHASH(Convert.ToString(DateTime.Now));
}

@section css{
    <style>
        textarea{
            height: 100px !important;
        }

        .only-vertical {
            resize: vertical;
            overflow: auto; /* Para asegurar que se muestre scroll si el contenido crece */
        }
    </style>
}

<div class="row">
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12">
                            <h1>
                                <span aria-hidden="true" class="icon icon-atom"></span>
                                <span class="main-text">
                                    Listado de Persona Prohibido de Ingreso
                                </span>
                            </h1>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-offset-4 col-md-4 col-sm-4 col-xs-6">
                            <button type="button" id="btnNuevo" class="btn btn-sm btn-success col-md-12 col-xs-12">
                                <span class="glyphicon glyphicon-book"></span>
                                Nuevo
                            </button>
                        </div>
                        <div class="col-md-4 col-sm-4  col-xs-6 pull-right">
                            <div class="row">
                                <div class="col-md-12 col-sm-12">
                                    <button type="button" id="btnExcel" class="btn btn-primary btn-sm col-md-12 col-xs-12">
                                        <span class="glyphicon glyphicon-file"></span>
                                        Excel
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12 tam">

                            <div class="">
                                <table id="tableTimador" class="table table-striped table-bordered table-hover table-condensed">
                                </table>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section modal{

    <div class="modal fade full-modal" id="full-modal_timador" tabindex="-1" role="dialog" aria-labelledby="full-modal-label" aria-hidden="true">
        <div class="modal-dialog modal-md">
            <div class="modal-content" data-border-top="multi">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="full-modal-label_"> <span id="textTimador">Nuevo</span> Persona Prohibido Ingreso</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12" id="divtimador">
                            <form class="medium bv-form" role="form" method="post" action="#" id="form_registro_timador">
                                <input type="hidden" name="timadorID" value="0" id="timador_id" />
                                <input type="hidden" name="Imagen" value="" id="Imagen" />
                                <input type="hidden" name="Foto" value="" id="Foto" />
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Nombre
                                            </span>
                                            <input type="text" class="form-control input-sm noKeyPress" id="nombre" value="" name="nombre" placeholder="Nombre">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Apellido Paterno
                                            </span>
                                            <input type="text" class="form-control input-sm noKeyPress" id="apellidoPaterno" value="" name="apellidoPaterno" placeholder="Apellido Paterno">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Apellido Materno
                                            </span>
                                            <input type="text" class="form-control input-sm noKeyPress" id="apellidoMaterno" value="" name="apellidoMaterno" placeholder="Apellido Materno">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Tipo Documento
                                            </span>
                                            <select id="cboTipoDocumento" class="form-control input-sm select" name="tipoDOI">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                DOI
                                            </span>
                                            <input type="text" class="form-control input-sm noKeyPress" id="dni" value="" name="dni" placeholder="Documento Identidad">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Banda
                                            </span>
                                            <select id="cboBanda" class="form-control input-sm select" name="bandaID">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Tipo Persona Prohibida de Ingreso
                                            </span>
                                            <select id="cboTipoTimador" class="form-control input-sm select" name="tipoTimadorID">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Foto
                                            </span>
                                            <input type="file" class="form-control input-sm" id="File" name="File" placeholder="File" accept="image/*">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Estado
                                            </span>
                                            <select id="cboEstado" class="form-control input-sm select" name="estado">
                                                <option value="">--Seleccione--</option>
                                                <option value="1">Activo</option>
                                                <option value="0">Inactivo</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Prohibir en todas las salas
                                            </span>
                                            <select id="cboProhibir" class="form-control input-sm select" name="prohibir">
                                                <option value="1">Sí</option>
                                                <option value="0" selected>No</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Con Atenuante
                                            </span>
                                            <select id="cboConAtenuante" class="form-control input-sm select" name="conAtenuante">
                                                <option value="true">Sí</option>
                                                <option value="false" selected>No</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div id="containerDescripcionAtenuante" class="col-md-12 col-sm-12 hidden">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Detalle Atenuante
                                            </span>
                                            <textarea id="descripcionAtenuante" class="form-control only-vertical" placeholder="Descripción del atenuante" name="descripcionAtenuante"></textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-12 col-sm-12" id="detallesIncidencia">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <fieldset>
                                                <legend>DETALLES INCIDENCIA</legend>

                                                <div class="col-md-12 col-sm-12">
                                                    <div class="form-group">
                                                        <div class="input-group">
                                                            <span class="input-group-addon">
                                                                Sala
                                                            </span>
                                                            <select id="cboSala" class="form-control input-sm select" name="codSala">
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-12 col-sm-12">
                                                    <div class="form-group">
                                                        <div class="input-group">
                                                            <span class="input-group-addon">
                                                                Observación
                                                            </span>
                                                            <input type="text" class="form-control input-sm noKeyPress" id="observacion" value="" name="observacion" placeholder="Observacion">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-12 col-sm-12">
                                                    <div class="form-group">
                                                        <div class="input-group">
                                                            <span class="input-group-addon">
                                                                Sustento Legal
                                                            </span>
                                                            <select id="cboSustentoLegal" class="form-control input-sm select" name="sustentoLegal">
                                                                <option value="">--Seleccione--</option>
                                                                <option value="1">Sí</option>
                                                                <option value="0">No</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-warning" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-sm btn-danger btnGuardar">Guardar</button>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade full-modal" id="full-modal_timador_incidencia" tabindex="-1" role="dialog" aria-labelledby="full-modal-label" aria-hidden="true" style="z-index: 19000">
        <div class="modal-dialog modal-md">
            <div class="modal-content" data-border-top="multi">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="full-modal-label_"> <span id="textTimadorIncidencia">Nueva</span> Incidencia </h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12" id="divtimadorincidencia">
                            <form class="medium bv-form" role="form" method="post" action="#" id="form_registro_timador_incidencia">
                                <input type="hidden" name="timadorIncidenciaID" value="0" id="timador_incidencia_id_incidencia" />
                                <input type="hidden" name="timadorID" value="0" id="timador_incidencia_id" />
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Sala
                                            </span>
                                            <select id="cboSalaIncidencia" class="form-control input-sm select" name="codSala">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Observación
                                            </span>
                                            <input type="text" class="form-control input-sm noKeyPress" id="observacionIncidencia" value="" name="observacion" placeholder="Observacion">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Sustento Legal
                                            </span>
                                            <select id="cboSustentoLegalIncidencia" class="form-control input-sm select" name="sustentoLegal">
                                                <option value="">--Seleccione--</option>
                                                <option value="1">Sí</option>
                                                <option value="0">No</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                Estado
                                            </span>
                                            <select id="cboEstadoIncidencia" class="form-control input-sm select" name="estado">
                                                <option value="">--Seleccione--</option>
                                                <option value="1">Activo</option>
                                                <option value="0">Inactivo</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-warning" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-sm btn-danger btnGuardarIncidencia">Guardar</button>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade full-modal" id="full-modal_timador_incidencias" tabindex="-1" role="dialog" aria-labelledby="full-modal-label" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" data-border-top="multi">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="full-modal-label_"> Incidencias </h4>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="tableTimadorIncidenciasID" />
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12" id="divtimadorincidencias">
                            <div class="">
                                <table id="tableIncidencias" class="table table-striped table-bordered table-hover table-condensed">
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-warning" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
