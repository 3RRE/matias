                    scoreModeA: function (score, answer) {

                        if (answer >= 4)
                        {
                            score = 1
                        }

                        if (answer == 3)
                        {
                            score = 1
                        }

                        if (answer == 2)
                        {
                            score = 0
                        }

                        if (answer == 1)
                        {
                            score = -1
                        }

                        if (answer == 0)
                        {
                            score = -1
                        }

                        if (answer == 'SI')
                        {
                            score = 1
                        }

                        if (answer == 'NO')
                        {
                            score = -1
                        }

                        if (answer == 'NA')
                        {
                            score = 0
                        }

                        if (answer == '')
                        {
                            score = 0
                        }

                        return score
                    }
