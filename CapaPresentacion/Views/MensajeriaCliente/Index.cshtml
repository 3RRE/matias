
@{
    ViewBag.Title = "Mensajeria Clientes";
}

@section css{
    <style>
        .text-white {
            color: white !important;
        }

        legend {
            color: #111330;
            font-weight: bold;
        }

        .icheckbox_bg-white {
            background-color: white;
        }

        #imagePreview {
            width: 100%;
            max-height: 40vh;
            object-fit: contain;
        }

        .containerMessage {
            display: flex;
            justify-content: center;
            display: flex;
        }

        @@media (max-width:990px) {
            .containerMessage {
                flex-direction: column;
            }
        }

        @@media (max-width:800px) {
            .block-content-outer {
                width: 100% !important;
            }
        }
    </style>
}

<div class="row">
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12" style="display:flex; justify-content:space-between">
                            <h1>
                                <span aria-hidden="true" class="icon icon-comment"></span>
                                <span class="main-text">
                                    Mensajeria WhatsApp para Clientes
                                </span>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6" id="contentButtonSection">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <button type="button" id="btnBuscar" class="btn btn-success btn-sm col-md-12 col-xs-12">
                                <span class="glyphicon glyphicon-search"></span>
                                Buscar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" id="contentFilterClientSecction">
    <div class="col-md-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <fieldset>
                        <legend style="display:flex; justify-content:space-between;">
                            <span style="display: flex; align-items: center; gap: 5px">
                                <i class="glyphicon glyphicon-filter text-white"></i>
                                Filtros de búsqueda
                            </span>
                        </legend>
                        <div class="row">
                            <div class="col-xs-12 col-md-12 col-sm-12">
                                <div class="row" id="formfiltro">
                                    <div class="col-md-3 col-sm-6">
                                        <div class="input-group ">
                                            <span class="input-group-addon">
                                                Sala
                                            </span>
                                            <select class="form-control input-sm select-filter" data-position="0" id="cboSala" name="cboSala"></select>
                                            @*<span class="input-group-addon">
                                                    <input type="checkbox" class="chk" data-id="sala" id="chkTodoSala" />
                                                </span>*@
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-6">
                                        <div class="input-group ">
                                            <span class="input-group-addon">
                                                T. Cliente
                                            </span>
                                            <select class="form-control input-sm select-filter" data-position="1" id="cboTipoCliente" name="cboTipoCliente"></select>
                                            @*<span class="input-group-addon">
                                                    <input type="checkbox" class="chk" data-id="tipoCliente" id="chkTodoTipoCliente" />
                                                </span>*@
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-6">
                                        <div class="input-group ">
                                            <span class="input-group-addon">
                                                T. Frecuencia
                                            </span>
                                            <select class="form-control input-sm select-filter" data-position="2" id="cboTipoFrecuencia" name="cboTipoFrecuencia"></select>
                                            @*<span class="input-group-addon">
                                                    <input type="checkbox" class="chk" data-id="tipoFrecuencia" id="chkTodoTipoFrecuencia" />
                                                </span>*@
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-6">
                                        <div class="input-group ">
                                            <span class="input-group-addon">
                                                T. Juego
                                            </span>
                                            <select class="form-control input-sm select-filter" data-position="3" id="cboTipoJuego" name="cboTipoJuego"></select>
                                            @*<span class="input-group-addon">
                                                    <input type="checkbox" class="chk" data-id="tipoJuego" id="chkTodoTipoJuego" />
                                                </span>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-12 tam">
                                <div class="table-responsive">
                                    <table id="tableClient" class="table table-striped table-bordered table-hover table-condensed">
                                        <thead class="text-center">
                                            <tr class="text-center">
                                                <th></th>
                                                <th>Nombre</th>
                                                <th>Código de País</th>
                                                <th>Número</th>
                                                <th>Número Alternativo</th>
                                                <th>Sala</th>
                                                <th>T. Cliente</th>
                                                <th>T. Frecuencia</th>
                                                <th>T. Juego</th>
                                                <th>Acción</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>

</div>

@*El contenido del tooltop de ayuda*@
