</div>

<div class="row" id="contentMessageSession">
    <div class="col-md-12" style="padding: 0px">
        <div class="block ">
            <div class="col-md-12">
                <div class="block-content-outer">
                    <div class="block-content-inner">
                        <fieldset>
                            <legend style="display:flex; justify-content:space-between;">
                                <span style="display: flex; align-items: center; gap: 5px;">
                                    <i class="glyphicon glyphicon-envelope text-white"></i>
                                    Mensajeria
                                </span>
                                <span class="tooltip-icon" id="popover-help">
                                    <i class="glyphicon glyphicon-info-sign text-white"></i>
                                </span>
                            </legend>
                            <div class="row">
                                <div class="col-md-12">
                                    <form id="frmMensaje">
                                        <div class="row containerMessage">
                                            <div class="col-md-7 col-sm-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon" style="min-width:120px;">
                                                        Imagen
                                                    </span>
                                                    <input type="file" class="form-control input-sm" name="image" id="image" accept=".jpg,.jpeg,.gif,.png,.webp,.bmp" />
                                                    <span class="input-group-addon" style="padding:0px">
                                                        <button type="button" id="btnQuitarImagen" class="btn btn-sm btn-danger">
                                                            <i class="glyphicon glyphicon-trash"></i>
                                                            Quitar Imagen
                                                        </button>
                                                    </span>
                                                </div>
                                                <div class="input-group">
                                                    <span class="input-group-addon" style="min-width:120px;">
                                                        Mensaje
                                                    </span>
                                                    <textarea class="form-control input-sm" id="txtMensaje" name="mensaje" style="resize:vertical;min-height:120px;">_Mensaje_ de ~prueba~ ```enviado``` desde el _*IAS*_.</textarea>
                                                </div>
                                            </div>
                                            <div class="col-md-5 col-sm-12" id="containerImage">
                                                <img src="#" alt="Imagen del Mensaje" id="imagePreview" />
                                            </div>
                                        </div>
                                        <div class="input-group " style="display:flex;justify-content:flex-end;align-items:flex-end;margin-top:20px;">
                                            <button type="button" class="form-control col-12 btn btn-sm btn-success" id="btnSendMessage"><span class="glyphicon glyphicon-send" style="top: 0px;margin-right:10px;"></span>Enviar Mensaje</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section modal
{
    <div class="modal fade modal-xl" id="modalGroup" tabindex="-1" role="dialog" aria-labelledby="default-modal-label" aria-hidden="true">
        <div class="modal-dialog">
            <input type="hidden" name="hddModal" id="hddmodal" />
            <div class="modal-content" data-border-top="multi">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="default-modal-label">Mantenimiento</h4>
                </div>
                <div class="modal-body" id="bodyModal">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary" id="btnGuardarModal">Guardar</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
}

@section js {
    <script src="~/Content/assets/viewsjs/WhatsApp/MensajeriaCliente/ListadoClientesVista.js"></script>
}
