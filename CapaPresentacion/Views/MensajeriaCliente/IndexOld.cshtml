@section css{
    <link href="~/Content/assets/js/optional/bootstrap-switch/css/bootstrap3/bootstrap-switch.css" rel="stylesheet" />
    <style>
        @@keyframes decorador {
            from {
                transform: scale(1)
            }

            to {
                transform: scale(1.1)
            }
        }

        .contain-qr {
            padding: 25px 150px;
            background-color: white;
            border-radius: 5px !important;
        }

        .canvas, .canvas-add {
            position: relative;
            height: auto;
            width: auto;
        }

        .canvas::before, .canvas-add:before,
        .canvas::after, .canvas-add:after {
            content: ' ';
            height: 20%;
            width: 20%;
            position: absolute;
            animation: 1s alternate decorador infinite;
            border-radius: 4px !important;
        }

        .canvas::after {
            bottom: -5px;
            left: -5px;
            border-bottom: 3px solid rgb(55, 93, 196);
            border-left: 3px solid rgb(55, 93, 196);
        }

        .canvas::before {
            right: -5px;
            bottom: -5px;
            border-bottom: 3px solid rgb(55, 93, 196);
            border-right: 3px solid rgb(55, 93, 196);
        }

        .canvas-add::after {
            top: -5px;
            left: -5px;
            border-top: 3px solid rgb(55, 93, 196);
            border-left: 3px solid rgb(55, 93, 196);
        }

        .canvas-add::before {
            top: -5px;
            right: -5px;
            border-top: 3px solid rgb(55, 93, 196);
            border-right: 3px solid rgb(55, 93, 196);
        }

        .info-wa {
            display: flex;
            justify-content: space-between;
            color: #111330;
            font-weight: bold;
        }

        .profile-info-block {
            text-align: center;
        }

        .text-white {
            color: white;
            !important
        }

        legend {
            color: #111330;
            font-weight: bold;
        }

        #imagePreview {
            width: 100%;
            max-height: 40vh;
            object-fit: contain;
        }

        .containerMessage {
            display: flex;
            justify-content: center;
            display: flex;
        }

        input[type="checkbox"] {
            background-color: white;
        }

        .icheckbox_bg-white {
            background-color: white;
        }

        @@media (max-width:800px) {
            .contain-qr {
                width: 100%;
                padding: 40px 5px !important;
                display: flex;
                justify-content: center;
                align-items: center;
                flex-direction: column;
            }

            .canvas, .canvas-add {
                width: 250px !important;
            }

            #qrcode {
                width: 250px !important;
            }

            .block-content-outer {
                width: 100% !important;
            }
        }

        @@media (max-width:490px) {
            .canvas, .canvas-add {
                width: 200px !important;
            }

            .info-wa {
                flex-direction: column;
                text-align: center;
            }

            #qrcode {
                width: 200px !important;
            }
        }

        @@media (max-width:990px) {
            .help-cont {
                margin-top: 10px;
            }

            .containerMessage {
                flex-direction: column;
            }
        }
    </style>
}

