@{
    ViewBag.Title = "Gestión de Tablets";
}

<style>
    .table th, .table td {
        text-align: center;
        vertical-align: middle !important;
    }
</style>

<div class="col-md-12" style="padding:unset;" id="filtros-container">
    <div class="block">
        <div class="block-content-outer">
            <div class="block-content-inner">
                <div class="row">
                    <!-- Select Sala -->
                    <div class="col-md-3 col-sm-3">
                        <div class="input-group">
                            <span class="input-group-addon">Sala</span>
                            <select id="cboSala" class="form-control"></select>
                        </div>
                    </div>

                    <!-- Botón Nueva Tablet -->
                    <div class="col-md-3 col-sm-3 pull-right">
                        <button id="btnNuevaTablet" class="btn btn-primary btn-block">
                            + Nueva Tablet
                        </button>
                    </div>
                </div>
                <hr />

                <!-- 📌 Tabla de Tablets -->
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Activo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="tablaTablets"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section modal
{
    <!-- 📌 Modal Crear/Editar Tablet -->
    <div class="modal fade" id="modalTablet" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="formTablet">
                    <div class="modal-header">
                        <h4 class="modal-title" id="tituloModalTablet">Nueva Tablet</h4>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" id="idTablet" />
                        <div class="form-group">
                            <label>Nombre de la Tablet</label>
                            <input type="text" id="nombreTablet" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label><input type="checkbox" id="activoTablet" checked /> Activo</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div id="modalUrlTablet" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-md" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">URL de la Tablet</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <label for="urlTabletTexto">Enlace generado:</label>
                    <input type="text" id="urlTabletTexto" class="form-control" readonly>
                    <br>
                    <a id="urlTabletLink" href="#" target="_blank" class="btn btn-sm btn-primary">
                        Abrir en otra pestaña
                    </a>
                </div>
            </div>
        </div>
    </div>

}

@section js{
    <script src="~/Content/assets/viewsjs/ClienteSatisfaccion/tabletConfig.js"></script>
}
