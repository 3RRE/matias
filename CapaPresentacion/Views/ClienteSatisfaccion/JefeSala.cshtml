
@{
    ViewBag.Title = "JefeSala";
}



<style>
    .table th, .table td {
        text-align: center;
        vertical-align: middle !important;
    }
</style>

<div class="col-md-12" style="padding:unset;" id="filtros-container">
    <div class="block">
        <div class="block-content-outer">
            <div class="block-content-inner">
                <div class="row">
                    <div class="col-md-3 col-sm-3">
                        <div class="input-group">
                            <span class="input-group-addon">Jefes de Sala</span>
                            <select id="cboSala" class="form-control"></select>
                        </div>
                    </div>

                    <div class="col-md-3 col-sm-3 pull-right">
                        <button id="btnNuevoJefe" class="btn btn-primary btn-block">
                            + Nuevo jefe de sala
                        </button>
                    </div>
                </div>
                <hr />

                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th>Código</th>
                            <th>Celular</th>
                            <th>Fecha Creación</th> 
                            <th>Acciones </th>
                        </tr>
                    </thead>
                    <tbody id="tableJefes"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section modal
{
  
    <div id="modalJefeSala" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header bg-primary text-white">
                    <h4 class="modal-title" id="titleModal">Nuevo Jefe de Sala</h4>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>×</span>
                    </button>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="IdJefeSala" />

                    <div class="form-group" id="groupNombres">
                        <label>Nombres</label>
                        <input type="text" id="Nombres" class="form-control" />
                    </div>

                    <div class="form-group" id="groupApellidos">
                        <label>Apellidos</label>
                        <input type="text" id="Apellidos" class="form-control" />
                    </div>

                    <div class="form-group" id="groupTelefono">
                        <label>Teléfono</label>
                        <div class="row">
                            <div class="col-xs-4"  id="groupCodigo">
                                <select id="cboPais" class="form-control"></select>
                            </div>
                            <div class="col-xs-8" id="groupCelular">
                                <input type="tel" id="Celular" class="form-control" placeholder="Número de celular" />
                            </div>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button id="btnGuardar" class="btn btn-primary">Guardar</button>
                </div>

            </div>
        </div>
    </div>
}

@section js{
    <script src="~/Content/assets/viewsjs/ClienteSatisfaccion/jefeSala.js"></script>
}
