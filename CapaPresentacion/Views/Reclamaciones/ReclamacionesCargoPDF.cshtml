@using CapaEntidad.Reclamaciones
@using CapaEntidad
@{
    Layout = null;
}
@{
    REC_reclamacionEntidad reclamacion = new REC_reclamacionEntidad();
    SalaEntidad sala = new SalaEntidad();
    EmpresaEntidad empresa = new EmpresaEntidad();

    bool respuesta = ViewBag.respuesta;
    if (respuesta)
    {
        reclamacion = ViewBag.reclamacion;
        sala = ViewBag.sala;
        empresa = ViewBag.empresa;
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="~/Content/assets/images/required/logo-default.ico">

    <title>Reclamaciones</title>

    <!-- Required CSS Files -->
    <link type="text/css" href="~/Content/assets/css/required/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href='~/fonts/fonts.googleapis/css2ca8.css?family=Roboto:400,300&amp;subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <link type="text/css" href="~/Content/assets/js/required/jquery-ui-1.11.0.custom/jquery-ui.min.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/assets/js/required/jquery-ui-1.11.0.custom/jquery-ui.structure.min.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/assets/js/required/jquery-ui-1.11.0.custom/jquery-ui.theme.min.css" rel="stylesheet" />

    <link type="text/css" href="~/Content/assets/css/required/icheck/all.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/assets/fonts/metrize-icons/styles-metrize-icons.css" rel="stylesheet">
    <link type="text/css" href="~/Content/assets/fonts/font-awesome-4.6.3/css/font-awesome.css" rel="stylesheet" />


    <!-- Optional CSS Files -->

    <link type="text/css" href="~/Content/assets/css/optional/fullcalendar/fullcalendar.min.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/assets/css/optional/fullcalendar/circloid-fullcalendar.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/assets/css/optional/fullcalendar/fullcalendar.print.css" rel="stylesheet" media="print" />
    <link type="text/css" href="~/Content/assets/css/optional/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/assets/css/optional/select2.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/assets/css/optional/bootstrapValidator.min.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/assets/css/optional/toastr.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/optional/jquery-confirm.css" rel="stylesheet" />

    <!-- add CSS files here -->
    <!-- More Required CSS Files -->
    <link type="text/css" href="~/Content/assets/css/styles-core.css" rel="stylesheet" />
    <link type="text/css" href="~/Content/assets/css/styles-core-responsive.css" rel="stylesheet" />
    <style>
        .widget-box {
            margin: 0px !important;
        }
    </style>
</head>
<body style="background:#ffffff">

    <div class="">
        <div id="">
            <div class="row">
                <div class="col-md-12" id="divCargo">
                    <div class="row">
                        <div class="col-md-12" style="padding-left: 100px;">
                            <div class="col-md-3 col-xs-3 col-lg-3 text-center">
                                @if (ViewBag.logoSala == "")
                                {
                                    <img src="~/Content/assets/images/no_image.jpg" class="img-responsive" style="padding-top: 5px;width: 115px;height:110px;margin: auto;" />
                                }
                                else
                                {
                                    <img src="@ViewBag.logoSala" class="img-responsive imgreclamacion" style="padding-top: 5px;width: 115px;height:110px;margin: auto;" />
                                }
                            </div>
                            <div class="col-md-7 col-xs-7 col-lg-7 text-center">
                                <p>
                                    <h2><b>Cargo de Respuesta</b></h2>
                                </p>
                                <div style="">
                                    <p style="text-align:center"><b><span id="spanrazonsocial">@empresa.RazonSocial.ToUpper()</span></b></p>
                                    <p style="text-align:center"><span id="spandireccionempresa">@empresa.Direccion.ToUpper()</span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 14px;">
                        <div class="col-md-12 col-xs-12 bg_white">
                            <div class="widget-box widget-color-dark">
                                <div class="widget-body" style="padding-left: 100px;">
                                    <div class="widget-main">
                                        <div class="row">
                                            <fieldset>
                                                <legend>Información del Local</legend>
                                                <p><b style="font-weight:bold;color: #000;">Empresa:</b> <span id="spanempresa">@empresa.RazonSocial.ToUpper()</span></p>
                                                <p><b style="font-weight:bold;color: #000;">RUC:</b> <span id="spanruc">@empresa.Ruc</span></p>
                                                <p><b style="font-weight:bold;color: #000;">Direccion:</b> <span id="spandireccion">@empresa.Direccion.ToUpper()</span></p>
                                                <p><b style="font-weight:bold;color: #000;">Sala:</b> <span id="spansala">@sala.Nombre</span></p>
                                            </fieldset>
                                            <fieldset>
                                                <legend>Información de Reclamación</legend>
                                                <p><b style="font-weight:bold;color: #000;">Codigo:</b> <span id="spancodigo">@reclamacion.codigo.ToUpper()</span></p>
                                                <p><b style="font-weight:bold;color: #000;">Fecha Registro:</b> <span id="spanfecha">@reclamacion.fecha</span></p>
                                                <p><b style="font-weight:bold;color: #000;">E-mail Cliente:</b> <span id="spancorreodestino">@reclamacion.correo.ToUpper()</span></p>
                                                <p><b style="font-weight:bold;color: #000;">Direcciones Adjuntas:</b> <span id="dpancorreoadjuntos">@reclamacion.direcciones_adjuntas.ToUpper()</span></p>
                                                <p><b style="font-weight:bold;color: #000;">Fecha Envio Email Cliente:</b> <span id="spanfechaenvio">@reclamacion.fecha</span></p>
                                         
                                                @if (reclamacion.fecha_enviolegal.ToShortDateString() != "1/01/1753")
                                                {
                                                    <p><b style="font-weight:bold;color: #000;">Fecha Envio Email Legal:</b> <span id="spanfechaenviolegal">@reclamacion.fecha_enviolegal</span></p>
                                                }
                                                else
                                                {
                                                    <p><b style="font-weight:bold;color: #000;">Fecha Envio Email Legal:</b> <span id="spanfechaenviolegal"></span></p>
                                                }
                                             <p><b style="font-weight:bold;color: #000;">Usuario Legal:</b> <span id="spanusuariolegal">@reclamacion.usuario_legal</span></p>
                                               
                                            </fieldset>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- /.container -->
</body>
</html>
