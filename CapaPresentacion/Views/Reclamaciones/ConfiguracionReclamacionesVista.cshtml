@using S3k.Utilitario;
@{
    ViewBag.Title = "ConfiguracionReclamacionesVista";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string fecha_archivos = ClaseEncriptacion.EncriptarCadenaHASH(Convert.ToString(DateTime.Now));
}


@section css
{
    <style>
        .d-flex-end {
            display: flex !important;
            justify-content: flex-end;
            align-items: center;
        }

        .d-flex {
            display: flex !important;
            justify-content: flex-start;
            align-items: center;
        }

        .liItemE {
            border: 1px solid #EEE;
        }

        .linkItemE .name-company {
            margin-right: 15px;
        }

        .linkItemE .totalSalasEmpresaSpan {
            display: inline-block;
            background: #FFFFFF;
            padding: 2px 4px;
            margin-left: auto;
            font-weight: 700;
            color: #000;
            font-size: 10px;
            border-radius: 4px !important;
        }

            .linkItemE .totalSalasEmpresaSpan.lie-success {
                background: #1BA345;
                color: #FFFFFF;
            }

        .linkItemE {
            margin-bottom: 0 !important;
        }

        @@media (max-width: 480px) {
            .nav-tabs.tabs-left + .tab-content {
                margin-left: 0;
            }
        }

        .checkbox-box label .toggle {
            margin-left: 0;
            margin-right: 0;
        }
    </style>
}

<div class="row">
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12">
                            <h1>
                                <span aria-hidden="true" class="icon icon-mailbox"></span>
                                <span class="main-text">
                                    Configuracion Reclamaciones por Sala
                                </span>
                            </h1>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="input-group" style="margin-bottom:0px">
                                <span class="input-group-addon">
                                    Sala
                                </span>
                                <select class="form-control input-sm" id="cboSala" name="sala">
                                    <option value="0">--Seleccione--</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="block">
            <div class="block-content-outer">
                <div class="block-content-inner ">
                    <div class="row">


                        <div class="col-md-6 col-md-offset-3 p-2">
                            <div class="cardMachine">

                                <fieldset class="sectionCard">
                                    @*<h3 style="margin-left:15px;margin-bottom:13px;">Correos</h3>*@
                                    <div class="col-md-12 col-lg-12 col-sm-12">
                                        <div class="input-group form-group">
                                            <span class="input-group-addon">
                                                Correos
                                            </span>
                                            <input type="email" id="txtCorreo" placeholder="Correo" style="width: 100%; height: 30px;" />
                                            <span class="input-group-btn">
                                                <button class="btn btn-warning btn-sm btnAgregar" id="btnAgregar" type="button"><i class="glyphicon glyphicon-plus-sign"></i></button>
                                            </span>

                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class=" col-md-12">
                                                <table id="tableCorreos" class="table table-striped table-bordered table-hover table-condensed highlight-color-red">
                                                    <thead>
                                                        <tr style="background-color: #0b1f46;">
                                                            <th>Correo</th>
                                                            <th>Accion</th>
                                                        </tr>
                                                    </thead>
                                                </table>
                                            </div>
                                        </div>
                                    </div>

                                </fieldset>

                            </div>
                        </div>
                        

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



@section js
{
    <script src="~/Content/assets/viewsjs/Reclamaciones/ConfiguracionReclamacionesVista.js?v=@fecha_archivos"></script>

}
